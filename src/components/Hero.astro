---
import Button from "./Button.astro";
import type { Colors } from "../utils/colors";

interface Props {
  title: string;
  subtitle: string;
  action?: {
    text: string;
    href: string;
    color: Colors;
    icon: string;
  };
}

const { title, subtitle, action } = Astro.props;
---

<section
  class="min-h-[60vh] relative flex items-center justify-center pt-32 pb-24 px-4 sm:px-6 max-w-4xl mx-auto"
>
  <div class="container mx-auto text-center">
    <h1
      class="text-3xl md:text-5xl lg:text-6xl font-semibold font-display text-text tracking-tight opacity-0 animate-fade-up mb-8"
    >
      {title}
    </h1>
    <p
      class="text-3xl md:text-4xl text-subtle/90 font-light opacity-0 animate-fade-up animation-delay-100 leading-relaxed"
    >
      {subtitle}
    </p>
    {
      action && (
        <div class="mt-12 opacity-0 animate-fade-up animation-delay-200">
          <Button href={action.href} color={action.color} icon={action.icon}>
            {action.text}
          </Button>
        </div>
      )
    }
  </div>
</section>
