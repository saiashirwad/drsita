---
const links = [
    { href: "/", label: "Home" },
    { href: "/about", label: "About" },
    {
        label: "Services",
        children: [
            { href: "/services", label: "Overview" },
            { href: "/retreats", label: "Retreats" },
            { href: "/speaking", label: "Speaking" },
        ],
    },
    {
        label: "Learn",
        children: [
            { href: "/academy", label: "Academy" },
            { href: "/courses", label: "Courses" },
            { href: "/blog", label: "Blog" },
        ],
    },
    { href: "/products", label: "Store" },
    { href: "/contact", label: "Contact" },
];
---

<nav
    class="fixed top-0 left-0 right-0 z-50 bg-surface/80 backdrop-blur-lg border-b border-highlight-low"
>
    <div class="max-w-6xl mx-auto px-6">
        <div class="flex items-center justify-between h-16">
            <!-- Logo/Brand -->
            <a href="/" class="flex items-center space-x-2">
                <span
                    class="text-2xl font-display text-text tracking-wide hover:text-pine transition-colors duration-300"
                    >Dr. Sita</span
                >
            </a>

            <!-- Desktop Navigation -->
            <div class="hidden md:flex items-center space-x-8">
                {
                    links.map((link) => (
                        <>
                            {!link.children ? (
                                <a
                                    href={link.href}
                                    class="text-subtle hover:text-text transition-colors duration-300 font-medium tracking-wide text-sm uppercase hover:text-pine relative after:content-[''] after:absolute after:w-full after:h-[2px] after:bg-pine after:bottom-[-4px] after:left-0 after:scale-x-0 hover:after:scale-x-100 after:transition-transform after:duration-300 after:origin-center"
                                >
                                    {link.label}
                                </a>
                            ) : (
                                <div class="relative group">
                                    <button class="text-subtle group-hover:text-text transition-colors duration-300 font-medium tracking-wide text-sm uppercase hover:text-pine flex items-center gap-1">
                                        {link.label}
                                        <svg
                                            class="w-4 h-4 transform group-hover:rotate-180 transition-transform duration-300"
                                            viewBox="0 0 24 24"
                                            fill="none"
                                            stroke="currentColor"
                                            stroke-width="2"
                                        >
                                            <path d="M6 9l6 6 6-6" />
                                        </svg>
                                    </button>
                                    <div class="absolute left-0 top-full pt-2 opacity-0 translate-y-2 invisible group-hover:opacity-100 group-hover:translate-y-0 group-hover:visible transition-all duration-300">
                                        <div class="bg-surface/95 backdrop-blur-xl rounded-lg py-2 min-w-[160px] border border-highlight-low shadow-xl">
                                            {link.children.map((child) => (
                                                <a
                                                    href={child.href}
                                                    class="block px-4 py-2 text-subtle hover:text-pine transition-colors duration-300 text-sm"
                                                >
                                                    {child.label}
                                                </a>
                                            ))}
                                        </div>
                                    </div>
                                </div>
                            )}
                        </>
                    ))
                }
            </div>

            <!-- Mobile Menu Button -->
            <button
                class="md:hidden text-subtle hover:text-text p-2"
                aria-label="Menu"
                id="mobile-menu-button"
            >
                <svg
                    class="w-6 h-6"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                >
                    <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M4 6h16M4 12h16M4 18h16"></path>
                </svg>
            </button>
        </div>

        <!-- Mobile Navigation -->
        <div class="md:hidden hidden" id="mobile-menu">
            <div class="px-2 pt-2 pb-3 space-y-1">
                {
                    links.map((link) => (
                        <>
                            {!link.children ? (
                                <a
                                    href={link.href}
                                    class="block px-3 py-2 text-subtle hover:text-pine transition-colors duration-300 font-medium tracking-wide text-sm uppercase"
                                >
                                    {link.label}
                                </a>
                            ) : (
                                <div class="space-y-1">
                                    <div class="px-3 py-2 text-subtle font-medium tracking-wide text-sm uppercase">
                                        {link.label}
                                    </div>
                                    <div class="pl-6 space-y-1">
                                        {link.children.map((child) => (
                                            <a
                                                href={child.href}
                                                class="block px-3 py-2 text-subtle hover:text-pine transition-colors duration-300 text-sm"
                                            >
                                                {child.label}
                                            </a>
                                        ))}
                                    </div>
                                </div>
                            )}
                        </>
                    ))
                }
            </div>
        </div>
    </div>
</nav>

<script>
    const mobileMenuButton = document.getElementById("mobile-menu-button");
    const mobileMenu = document.getElementById("mobile-menu");

    mobileMenuButton?.addEventListener("click", () => {
        mobileMenu?.classList.toggle("hidden");
    });
</script>
