---
import { Icon } from "astro-icon/components";

const links = [
    { href: "/", label: "Home" },
    { href: "/about", label: "About" },
    {
        label: "Services",
        children: [
            { href: "/services", label: "Overview" },
            { href: "/couples-therapy", label: "Couples Therapy" },
            { href: "/holistic-approach", label: "Holistic Approach" },
            { href: "/retreats", label: "Retreats" },
        ],
    },
    {
        label: "Learn",
        children: [
            { href: "/academy", label: "Academy" },
            { href: "/blog", label: "Blog" },
            { href: "/testimonials", label: "Testimonials" },
        ],
    },
    {
        href: "/speaking",
        label: "Speaking",
    },
    { href: "/products", label: "Store" },
    { href: "/contact", label: "Contact" },
];
---

<nav
    class="fixed top-0 left-0 right-0 z-50 bg-surface/80 backdrop-blur-lg border-b border-highlight-low"
>
    <div class="container max-w-7xl mx-auto sm:px-6">
        <div class="flex items-center justify-between h-14">
            <!-- Logo -->
            <a
                href="/"
                class="text-text hover:text-pine transition-colors duration-300"
            >
                <h1 class="text-xl font-display text-subtle">
                    Dr Sita's Mind Body Care
                </h1>
            </a>

            <!-- Desktop Navigation -->
            <div class="hidden md:flex items-center justify-end gap-8">
                {
                    links.map((link) => (
                        <>
                            {!link.children ? (
                                <a
                                    href={link.href}
                                    class="text-subtle hover:text-text transition-colors duration-300 font-medium tracking-wide text-sm uppercase relative after:content-[''] after:absolute after:w-full after:h-[2px] after:bg-pine after:bottom-[-4px] after:left-0 after:scale-x-0 hover:after:scale-x-100 after:transition-transform after:duration-300 after:origin-center"
                                >
                                    {link.label}
                                </a>
                            ) : (
                                <div class="relative group">
                                    <button class="text-subtle group-hover:text-text transition-colors duration-300 font-medium tracking-wide text-sm uppercase hover:text-pine flex items-center gap-1">
                                        {link.label}
                                        <Icon
                                            name="mdi:chevron-down"
                                            class="w-4 h-4 transform group-hover:rotate-180 transition-transform duration-300"
                                        />
                                    </button>
                                    <div class="absolute left-0 top-full pt-2 opacity-0 translate-y-2 invisible group-hover:opacity-100 group-hover:translate-y-0 group-hover:visible transition-all duration-300">
                                        <div class="bg-surface/95 backdrop-blur-xl rounded-lg py-2 min-w-[160px] border border-highlight-low shadow-xl">
                                            {link.children.map((child) => (
                                                <a
                                                    href={child.href}
                                                    class="block px-4 py-2 text-subtle hover:text-pine transition-colors duration-300 text-sm"
                                                >
                                                    {child.label}
                                                </a>
                                            ))}
                                        </div>
                                    </div>
                                </div>
                            )}
                        </>
                    ))
                }
            </div>

            <!-- Mobile Menu Button -->
            <button
                class="md:hidden text-subtle hover:text-text p-2 ml-auto"
                aria-label="Menu"
                id="mobile-menu-button"
            >
                <Icon name="mdi:menu" class="w-6 h-6" />
            </button>
        </div>

        <!-- Mobile Navigation -->
        <div class="md:hidden hidden pb-6" id="mobile-menu">
            <div class="px-2 pt-2 pb-3 space-y-1">
                {
                    links.map((link) => (
                        <>
                            {!link.children ? (
                                <a
                                    href={link.href}
                                    class="block px-3 py-2 text-subtle hover:text-pine transition-colors duration-300 font-medium tracking-wide text-sm uppercase"
                                >
                                    {link.label}
                                </a>
                            ) : (
                                <div class="space-y-1">
                                    <div class="px-3 py-2 text-subtle font-medium tracking-wide text-sm uppercase">
                                        {link.label}
                                    </div>
                                    <div class="pl-6 space-y-1">
                                        {link.children.map((child) => (
                                            <a
                                                href={child.href}
                                                class="block px-3 py-2 text-subtle hover:text-pine transition-colors duration-300 text-sm"
                                            >
                                                {child.label}
                                            </a>
                                        ))}
                                    </div>
                                </div>
                            )}
                        </>
                    ))
                }
            </div>
        </div>
    </div>
</nav>

<script>
    const mobileMenuButton = document.getElementById("mobile-menu-button");
    const mobileMenu = document.getElementById("mobile-menu");

    mobileMenuButton?.addEventListener("click", () => {
        mobileMenu?.classList.toggle("hidden");
    });
</script>
