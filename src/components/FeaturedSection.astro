---
import { Icon } from "astro-icon/components";

type Feature = {
    title: string;
    description: string;
    stat: {
        value: string;
        label: string;
    };
    link: {
        text: string;
        href: string;
    };
    icon: {
        name: string;
    };
    color: "love" | "pine" | "iris" | "gold";
};

const features: Feature[] = [
    {
        title: "YouTube Channel",
        description:
            "Empowering millions through educational content on sexual health, wellness, and mindful living across three channels in Malayalam and English.",
        stat: {
            value: "1.3M+",
            label: "subscribers",
        },
        link: {
            text: "Watch Latest Videos",
            href: "/youtube",
        },
        icon: {
            name: "mdi:youtube",
        },
        color: "love",
    },
    {
        title: "Couple Therapy",
        description:
            "Pioneer in treating unconsummated marriages and intimate health challenges through our innovative therapeutic approach, combining medical expertise with holistic healing.",
        stat: {
            value: "500+",
            label: "success stories",
        },
        link: {
            text: "Learn About Couple's Therapy",
            href: "/services#couples-therapy",
        },
        icon: {
            name: "mdi:heart-pulse",
        },
        color: "pine",
    },
    {
        title: "Dr. Sita's Academy",
        description:
            "Comprehensive online courses for both public and healthcare professionals, covering sexual wellness, pregnancy care, mental health, and professional development.",
        stat: {
            value: "20+",
            label: "specialized courses",
        },
        link: {
            text: "Explore Courses",
            href: "/academy",
        },
        icon: {
            name: "mdi:school",
        },
        color: "iris",
    },
    {
        title: "SiRa Products",
        description:
            "Carefully curated collection of nutraceuticals, supplements, and wellness products designed to support your journey to optimal health.",
        stat: {
            value: "20+",
            label: "wellness products",
        },
        link: {
            text: "Shop Products",
            href: "/products",
        },
        icon: {
            name: "mdi:shopping",
        },
        color: "gold",
    },
];
---

<section class="container mx-auto py-24 px-4 sm:px-6">
    <div class="grid grid-cols-1 md:grid-cols-2 gap-8 max-w-6xl mx-auto">
        {
            features.map((feature) => (
                <div class="group h-full">
                    <div
                        class={`bg-surface h-full p-8 rounded-xl shadow-lg border-2 border-${feature.color}/20 flex flex-col`}
                    >
                        <div class="flex items-center justify-between mb-6">
                            <div
                                class={`p-3 rounded-lg bg-${feature.color}/10`}
                            >
                                <span class={`text-${feature.color} text-2xl`}>
                                    <Icon name={feature.icon.name} />
                                </span>
                            </div>
                            <div class="text-right">
                                <span class="block text-2xl font-bold text-text">
                                    {feature.stat.value}
                                </span>
                                <span class="text-sm text-subtle">
                                    {feature.stat.label}
                                </span>
                            </div>
                        </div>
                        <h3 class="text-xl font-semibold text-text mb-3">
                            {feature.title}
                        </h3>
                        <p class="text-muted mb-6 flex-grow line-clamp-3">
                            {feature.description}
                        </p>
                        <a
                            href={feature.link.href}
                            class={`inline-flex items-center text-${feature.color} hover:underline mt-auto`}
                        >
                            {feature.link.text}
                            <span class="ml-2">â†’</span>
                        </a>
                    </div>
                </div>
            ))
        }
    </div>
</section>
