---
import FeatureCard from "./FeatureCard.astro";

type Feature = {
    title: string;
    description: string;
    stat: {
        value: string;
        label: string;
    };
    link: {
        text: string;
        href: string;
    };
    icon: {
        name: string;
    };
    color: "love" | "pine" | "iris" | "gold";
};

const features: Feature[] = [
    {
        title: "YouTube Channel",
        description:
            "Empowering millions through educational content on sexual health, wellness, and mindful living across three channels in Malayalam and English.",
        stat: {
            value: "1.3M+",
            label: "subscribers",
        },
        link: {
            text: "Watch Latest Videos",
            href: "/youtube",
        },
        icon: {
            name: "mdi:youtube",
        },
        color: "love",
    },
    {
        title: "Couple's Therapy",
        description:
            "Pioneer in treating unconsummated marriages and intimate health challenges through our innovative therapeutic approach, combining medical expertise with holistic healing.",
        stat: {
            value: "500+",
            label: "success stories",
        },
        link: {
            text: "Learn About Couple's Therapy",
            href: "/services#couples-therapy",
        },
        icon: {
            name: "mdi:heart-pulse",
        },
        color: "pine",
    },
    {
        title: "Dr. Sita's Academy",
        description:
            "Comprehensive online courses for both public and healthcare professionals, covering sexual wellness, pregnancy care, mental health, and professional development.",
        stat: {
            value: "20+",
            label: "specialized courses",
        },
        link: {
            text: "Explore Courses",
            href: "/academy",
        },
        icon: {
            name: "mdi:school",
        },
        color: "iris",
    },
    {
        title: "SiRa Products",
        description:
            "Carefully curated collection of nutraceuticals, supplements, and wellness products designed to support your journey to optimal health.",
        stat: {
            value: "20+",
            label: "wellness products",
        },
        link: {
            text: "Shop Products",
            href: "/products",
        },
        icon: {
            name: "mdi:shopping",
        },
        color: "gold",
    },
];
---

<section class="container mx-auto py-16 px-4 sm:px-6">
    <div class="space-y-6">
        {features.map((feature) => <FeatureCard {...feature} />)}
    </div>
</section>
