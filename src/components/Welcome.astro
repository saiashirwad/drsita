---
import GradientButton from "./GradientButton.astro";
import Navbar from "./Navbar.astro";
import BackgroundShapes from "./BackgroundShapes.astro";
---

<Navbar />

<div class="min-h-screen flex flex-col bg-base">
	<!-- Social Links -->
	<div class="fixed top-24 right-6 z-50">
		<div class="flex gap-4 opacity-0 animate-fade-in animation-delay-500">
			<a
				href="https://www.youtube.com/@drsitamindbodycare"
				class="group text-subtle/70 hover:text-pine transition-all duration-300"
				aria-label="YouTube Channel"
			>
				<div
					class="p-2.5 rounded-full bg-surface/50 group-hover:bg-surface/80 transition-colors duration-300"
				>
					<svg
						class="w-5 h-5"
						viewBox="0 0 24 24"
						fill="currentColor"
					>
						<path
							d="M23.498 6.186a3.016 3.016 0 0 0-2.122-2.136C19.505 3.545 12 3.545 12 3.545s-7.505 0-9.377.505A3.017 3.017 0 0 0 .502 6.186C0 8.07 0 12 0 12s0 3.93.502 5.814a3.016 3.016 0 0 0 2.122 2.136c1.871.505 9.376.505 9.376.505s7.505 0 9.377-.505a3.015 3.015 0 0 0 2.122-2.136C24 15.93 24 12 24 12s0-3.93-.502-5.814zM9.545 15.568V8.432L15.818 12l-6.273 3.568z"
						></path>
					</svg>
				</div>
			</a>
			<a
				href="https://www.instagram.com/askdrsita"
				class="group text-subtle/70 hover:text-pine transition-all duration-300"
				aria-label="Instagram Profile"
			>
				<div
					class="p-2.5 rounded-full bg-surface/50 group-hover:bg-surface/80 transition-colors duration-300"
				>
					<svg
						class="w-5 h-5"
						viewBox="0 0 24 24"
						fill="currentColor"
					>
						<path
							d="M12 2c2.717 0 3.056.01 4.122.06 1.065.05 1.79.217 2.428.465.66.254 1.216.598 1.772 1.153.509.5.902 1.105 1.153 1.772.247.637.415 1.363.465 2.428.047 1.066.06 1.405.06 4.122 0 2.717-.01 3.056-.06 4.122-.05 1.065-.218 1.79-.465 2.428a4.883 4.883 0 0 1-1.153 1.772c-.5.508-1.105.902-1.772 1.153-.637.247-1.363.415-2.428.465-1.066.047-1.405.06-4.122.06-2.717 0-3.056-.01-4.122-.06-1.065-.05-1.79-.218-2.428-.465a4.89 4.89 0 0 1-1.772-1.153 4.904 4.904 0 0 1-1.153-1.772c-.248-.637-.415-1.363-.465-2.428C2.013 15.056 2 14.717 2 12c0-2.717.01-3.056.06-4.122.05-1.066.217-1.79.465-2.428a4.88 4.88 0 0 1 1.153-1.772A4.897 4.897 0 0 1 5.45 2.525c.638-.248 1.362-.415 2.428-.465C8.944 2.013 9.283 2 12 2zm0 5a5 5 0 1 0 0 10 5 5 0 0 0 0-10zm6.5-.25a1.25 1.25 0 1 0-2.5 0 1.25 1.25 0 0 0 2.5 0zM12 9a3 3 0 1 1 0 6 3 3 0 0 1 0-6z"
						></path>
					</svg>
				</div>
			</a>
		</div>
	</div>

	<!-- Hero Section -->
	<div class="flex-1 flex items-center px-4 sm:px-6 relative min-h-screen">
		<BackgroundShapes />
		<main
			class="max-w-container-xl w-full mx-auto grid md:grid-cols-1 lg:grid-cols-2 gap-8 md:gap-12 items-center"
		>
			<!-- Text Content -->
			<div class="space-y-8 md:space-y-12">
				<div class="space-y-4 md:space-y-6">
					<h1
						class="opacity-0 animate-fade-up text-4xl sm:text-5xl md:text-6xl lg:text-7xl font-display text-text tracking-tight"
					>
						Hi, I'm Dr. Sita
					</h1>
					<p
						class="opacity-0 animate-fade-up animation-delay-300 text-2xl sm:text-3xl md:text-4xl text-subtle/90 font-light"
					>
						Sexual Health Consultant, Youtuber, Wellness coach &
						Educator
					</p>
				</div>

				<p
					class="opacity-0 animate-fade-up animation-delay-500 text-xl sm:text-2xl text-subtle leading-relaxed max-w-xl"
				>
					I empower individuals to take charge of their sexual and
					reproductive health through comprehensive care, education,
					and holistic wellness approaches.
				</p>

				<div
					class="opacity-0 animate-fade-up animation-delay-500 flex flex-col sm:flex-row gap-4 pt-4"
				>
					<GradientButton href="/about" color="pine" icon="arrow">
						Learn More
					</GradientButton>
					<GradientButton
						href="https://cal.com/dr-sita"
						external
						color="love"
						icon="calendar"
					>
						Book a Consultation
					</GradientButton>
				</div>
			</div>

			<!-- Image/Visual Side -->
			<div class="relative hidden lg:flex items-center justify-center">
				<img
					src="portrait.png"
					alt="Dr. Sita"
					class="w-[40vh] h-[40vh] rounded-full opacity-0 animate-fade-in animation-delay-500 ring-4 ring-subtle/20 object-cover"
				/>
			</div>
		</main>
	</div>

	<!-- Featured Content Section -->
	<section class="w-full max-w-container-lg mx-auto pb-32 px-4 sm:px-6">
		<div class="grid grid-cols-1 md:grid-cols-2 gap-8">
			<!-- YouTube Channel - Large Card -->
			<div
				class="group relative transform hover:-translate-y-2 transition-all duration-300 md:row-span-2 h-auto"
			>
				<div
					class="absolute inset-0 bg-gradient-to-br from-love/20 via-transparent to-base/90 rounded-3xl blur-xl group-hover:blur-2xl transition-all duration-300"
				>
				</div>
				<div
					class="relative bg-surface/30 rounded-3xl p-12 h-full border border-highlight-med/10 backdrop-blur-xl shadow-2xl shadow-love/5 group-hover:border-love/20 group-hover:bg-surface/40 transition-all duration-300"
				>
					<div class="h-full flex flex-col">
						<div
							class="bg-love/10 w-20 h-20 rounded-2xl flex items-center justify-center mb-8 transform group-hover:scale-110 transition-transform duration-300"
						>
							<svg
								class="w-10 h-10 text-love"
								viewBox="0 0 24 24"
								fill="none"
								stroke="currentColor"
								stroke-width="1.5"
							>
								<path
									d="M14 12L10.5 14V10L14 12Z"
									fill="currentColor"
									stroke="currentColor"
									stroke-width="1.5"
									stroke-linejoin="round"></path>
								<rect
									x="3"
									y="6"
									width="18"
									height="12"
									rx="2"
									stroke="currentColor"></rect>
							</svg>
						</div>

						<div class="flex-grow">
							<h3 class="text-4xl font-display text-text mb-4">
								YouTube Channel
							</h3>
							<div class="flex items-center gap-3 mb-6">
								<span
									class="text-5xl font-bold bg-gradient-to-r from-love via-gold to-love bg-clip-text text-transparent bg-[length:200%_auto] group-hover:bg-right transition-all duration-500"
									>1M+</span
								>
								<span class="text-2xl text-subtle/90"
									>subscribers</span
								>
							</div>
							<p
								class="text-xl text-subtle/90 leading-relaxed mb-8"
							>
								Join our growing community learning about sexual
								health and wellness through engaging video
								content.
							</p>
						</div>

						<a
							href="https://www.youtube.com/@drsitamindbodycare"
							class="inline-flex items-center gap-2 text-love hover:text-love transition-colors duration-300 text-xl group/link"
						>
							<span
								class="relative after:absolute after:bottom-0 after:left-0 after:h-[2px] after:w-full after:origin-left after:scale-x-0 after:bg-current after:transition-transform after:duration-300 group-hover/link:after:scale-x-100"
								>Watch Latest Videos</span
							>
							<svg
								class="w-6 h-6 transform group-hover/link:translate-x-2 transition-transform duration-300"
								viewBox="0 0 24 24"
								fill="none"
								stroke="currentColor"
								stroke-width="2"
							>
								<path d="M5 12h14m-7-7 7 7-7 7"></path>
							</svg>
						</a>
					</div>
				</div>
			</div>

			<!-- Conference Speaking -->
			<div
				class="group relative transform hover:-translate-y-2 transition-all duration-300 h-auto"
			>
				<div
					class="absolute inset-0 bg-gradient-to-br from-foam/20 via-transparent to-base/90 rounded-3xl blur-xl group-hover:blur-2xl transition-all duration-300"
				>
				</div>
				<div
					class="relative bg-surface/30 rounded-3xl p-8 h-full border border-highlight-med/10 backdrop-blur-xl shadow-2xl shadow-foam/5 group-hover:border-foam/20 group-hover:bg-surface/40 transition-all duration-300"
				>
					<div class="flex flex-col h-full">
						<div
							class="bg-foam/10 w-16 h-16 rounded-2xl flex-shrink-0 flex items-center justify-center transform group-hover:scale-110 transition-transform duration-300"
						>
							<svg
								class="w-8 h-8 text-foam"
								viewBox="0 0 24 24"
								fill="none"
								stroke="currentColor"
								stroke-width="1.5"
							>
								<path d="M12 14l9-5-9-5-9 5 9 5z"></path>
								<path
									d="M12 14l6.16-3.422a12.083 12.083 0 01.665 6.479A11.952 11.952 0 0012 20.055a11.952 11.952 0 00-6.824-2.998 12.078 12.078 0 01.665-6.479L12 14z"
								></path>
							</svg>
						</div>

						<div>
							<h3 class="text-2xl font-display text-text mb-2">
								Conference Speaking
							</h3>
							<p
								class="text-lg text-subtle/90 leading-relaxed mb-4"
							>
								Keynote speaker at international health
								conferences
							</p>
							<a
								href="/speaking"
								class="inline-flex items-center gap-2 text-foam hover:text-foam transition-colors duration-300 text-lg group/link"
							>
								<span
									class="relative after:absolute after:bottom-0 after:left-0 after:h-[2px] after:w-full after:origin-left after:scale-x-0 after:bg-current after:transition-transform after:duration-300 group-hover/link:after:scale-x-100"
									>View Speaking</span
								>
								<svg
									class="w-5 h-5 transform group-hover/link:translate-x-2 transition-transform duration-300"
									viewBox="0 0 24 24"
									fill="none"
									stroke="currentColor"
									stroke-width="2"
								>
									<path d="M5 12h14m-7-7 7 7-7 7"></path>
								</svg>
							</a>
						</div>
					</div>
				</div>
			</div>

			<!-- Online Courses -->
			<div
				class="group relative transform hover:-translate-y-2 transition-all duration-300 h-auto"
			>
				<div
					class="absolute inset-0 bg-gradient-to-br from-iris/20 via-transparent to-base/90 rounded-3xl blur-xl group-hover:blur-2xl transition-all duration-300"
				>
				</div>
				<div
					class="relative bg-surface/30 rounded-3xl p-8 h-full border border-highlight-med/10 backdrop-blur-xl shadow-2xl shadow-iris/5 group-hover:border-iris/20 group-hover:bg-surface/40 transition-all duration-300"
				>
					<div class="flex flex-col h-full">
						<div
							class="bg-iris/10 w-16 h-16 rounded-2xl flex-shrink-0 flex items-center justify-center transform group-hover:scale-110 transition-transform duration-300"
						>
							<svg
								class="w-8 h-8 text-iris"
								viewBox="0 0 24 24"
								fill="none"
								stroke="currentColor"
								stroke-width="1.5"
							>
								<path d="M12 14l9-5-9-5-9 5 9 5z"></path>
								<path
									d="M12 14l6.16-3.422a12.083 12.083 0 01.665 6.479A11.952 11.952 0 0012 20.055a11.952 11.952 0 00-6.824-2.998a12.078 12.078 0 01.665-6.479L12 14z"
								></path>
							</svg>
						</div>

						<div>
							<h3 class="text-2xl font-display text-text mb-2">
								Online Courses
							</h3>
							<div class="flex items-center gap-2 mb-4">
								<span
									class="text-3xl font-bold bg-gradient-to-r from-iris via-foam to-iris bg-clip-text text-transparent bg-[length:200%_auto] group-hover:bg-right transition-all duration-500"
									>10+</span
								>
								<span class="text-lg text-subtle/90"
									>courses</span
								>
							</div>
							<a
								href="/courses"
								class="inline-flex items-center gap-2 text-iris hover:text-iris transition-colors duration-300 text-lg group/link"
							>
								<span
									class="relative after:absolute after:bottom-0 after:left-0 after:h-[2px] after:w-full after:origin-left after:scale-x-0 after:bg-current after:transition-transform after:duration-300 group-hover/link:after:scale-x-100"
									>Browse Courses</span
								>
								<svg
									class="w-5 h-5 transform group-hover/link:translate-x-2 transition-transform duration-300"
									viewBox="0 0 24 24"
									fill="none"
									stroke="currentColor"
									stroke-width="2"
								>
									<path d="M5 12h14m-7-7 7 7-7 7"></path>
								</svg>
							</a>
						</div>
					</div>
				</div>
			</div>

			<!-- SiRa Products -->
			<div
				class="group relative transform hover:-translate-y-2 transition-all duration-300 md:col-span-2 h-auto"
			>
				<div
					class="absolute inset-0 bg-gradient-to-br from-gold/20 via-transparent to-base/90 rounded-3xl blur-xl group-hover:blur-2xl transition-all duration-300"
				>
				</div>
				<div
					class="relative bg-surface/30 rounded-3xl p-8 border border-highlight-med/10 backdrop-blur-xl shadow-2xl shadow-gold/5 group-hover:border-gold/20 group-hover:bg-surface/40 transition-all duration-300"
				>
					<div class="flex items-start gap-6">
						<div
							class="bg-gold/10 w-16 h-16 rounded-2xl flex-shrink-0 flex items-center justify-center transform group-hover:scale-110 transition-transform duration-300"
						>
							<svg
								class="w-8 h-8 text-gold"
								viewBox="0 0 24 24"
								fill="none"
								stroke="currentColor"
								stroke-width="1.5"
							>
								<path
									d="M20.59 13.41l-7.17 7.17a2 2 0 0 1-2.83 0L2 12V2h10l8.59 8.59a2 2 0 0 1 0 2.82z"
								></path>
								<line x1="7" y1="7" x2="7.01" y2="7"></line>
							</svg>
						</div>

						<div class="flex-grow">
							<div class="flex items-center justify-between mb-4">
								<div>
									<h3
										class="text-2xl font-display text-text mb-2"
									>
										SiRa Products
									</h3>
									<div class="flex items-center gap-2">
										<span
											class="text-3xl font-bold bg-gradient-to-r from-gold via-rose to-gold bg-clip-text text-transparent bg-[length:200%_auto] group-hover:bg-right transition-all duration-500"
											>20+</span
										>
										<span class="text-lg text-subtle/90"
											>products</span
										>
									</div>
								</div>
								<a
									href="/products"
									class="inline-flex items-center gap-2 text-gold hover:text-gold transition-colors duration-300 text-lg group/link"
								>
									<span
										class="relative after:absolute after:bottom-0 after:left-0 after:h-[2px] after:w-full after:origin-left after:scale-x-0 after:bg-current after:transition-transform after:duration-300 group-hover/link:after:scale-x-100"
										>View Products</span
									>
									<svg
										class="w-5 h-5 transform group-hover/link:translate-x-2 transition-transform duration-300"
										viewBox="0 0 24 24"
										fill="none"
										stroke="currentColor"
										stroke-width="2"
									>
										<path d="M5 12h14m-7-7 7 7-7 7"></path>
									</svg>
								</a>
							</div>
							<p class="text-lg text-subtle/90 leading-relaxed">
								Discover our line of carefully curated health
								products and supplements.
							</p>
						</div>
					</div>
				</div>
			</div>
		</div>
	</section>
</div>

<style>
	a {
		text-decoration: none;
	}
</style>
