---
import GradientButton from "./GradientButton.astro";
import Navbar from "./Navbar.astro";
import BackgroundShapes from "./BackgroundShapes.astro";
---

<Navbar />

<div class="min-h-screen flex flex-col bg-base">
	<!-- Social Links -->
	<div class="fixed top-24 right-6 z-50">
		<div class="flex gap-4 opacity-0 animate-fade-in animation-delay-500">
			<a
				href="https://www.youtube.com/@drsitamindbodycare"
				class="group text-subtle/70 hover:text-pine transition-all duration-300"
				aria-label="YouTube Channel"
			>
				<div
					class="p-2.5 rounded-full bg-surface/50 group-hover:bg-surface/80 transition-colors duration-300"
				>
					<svg
						class="w-5 h-5"
						viewBox="0 0 24 24"
						fill="currentColor"
					>
						<path
							d="M23.498 6.186a3.016 3.016 0 0 0-2.122-2.136C19.505 3.545 12 3.545 12 3.545s-7.505 0-9.377.505A3.017 3.017 0 0 0 .502 6.186C0 8.07 0 12 0 12s0 3.93.502 5.814a3.016 3.016 0 0 0 2.122 2.136c1.871.505 9.376.505 9.376.505s7.505 0 9.377-.505a3.015 3.015 0 0 0 2.122-2.136C24 15.93 24 12 24 12s0-3.93-.502-5.814zM9.545 15.568V8.432L15.818 12l-6.273 3.568z"
						></path>
					</svg>
				</div>
			</a>
			<a
				href="https://www.instagram.com/askdrsita"
				class="group text-subtle/70 hover:text-pine transition-all duration-300"
				aria-label="Instagram Profile"
			>
				<div
					class="p-2.5 rounded-full bg-surface/50 group-hover:bg-surface/80 transition-colors duration-300"
				>
					<svg
						class="w-5 h-5"
						viewBox="0 0 24 24"
						fill="currentColor"
					>
						<path
							d="M12 2c2.717 0 3.056.01 4.122.06 1.065.05 1.79.217 2.428.465.66.254 1.216.598 1.772 1.153.509.5.902 1.105 1.153 1.772.247.637.415 1.363.465 2.428.047 1.066.06 1.405.06 4.122 0 2.717-.01 3.056-.06 4.122-.05 1.065-.218 1.79-.465 2.428a4.883 4.883 0 0 1-1.153 1.772c-.5.508-1.105.902-1.772 1.153-.637.247-1.363.415-2.428.465-1.066.047-1.405.06-4.122.06-2.717 0-3.056-.01-4.122-.06-1.065-.05-1.79-.218-2.428-.465a4.89 4.89 0 0 1-1.772-1.153 4.904 4.904 0 0 1-1.153-1.772c-.248-.637-.415-1.363-.465-2.428C2.013 15.056 2 14.717 2 12c0-2.717.01-3.056.06-4.122.05-1.066.217-1.79.465-2.428a4.88 4.88 0 0 1 1.153-1.772A4.897 4.897 0 0 1 5.45 2.525c.638-.248 1.362-.415 2.428-.465C8.944 2.013 9.283 2 12 2zm0 5a5 5 0 1 0 0 10 5 5 0 0 0 0-10zm6.5-.25a1.25 1.25 0 1 0-2.5 0 1.25 1.25 0 0 0 2.5 0zM12 9a3 3 0 1 1 0 6 3 3 0 0 1 0-6z"
						></path>
					</svg>
				</div>
			</a>
		</div>
	</div>

	<!-- Hero Section -->
	<div class="flex-1 flex items-center px-4 sm:px-6 relative min-h-screen">
		<BackgroundShapes />
		<main
			class="max-w-6xl w-full mx-auto grid md:grid-cols-2 gap-8 md:gap-12 items-center"
		>
			<!-- Text Content -->
			<div class="space-y-8 md:space-y-12">
				<div class="space-y-4 md:space-y-6">
					<h1
						class="opacity-0 animate-fade-up text-4xl sm:text-5xl md:text-6xl lg:text-7xl font-display text-text tracking-tight"
					>
						Hi, I'm Dr. Sita
					</h1>
					<p
						class="opacity-0 animate-fade-up animation-delay-300 text-2xl sm:text-3xl md:text-4xl text-subtle/90 font-light"
					>
						Sexual Health Consultant, Youtuber, Wellness coach &
						Educator
					</p>
				</div>

				<p
					class="opacity-0 animate-fade-up animation-delay-500 text-xl sm:text-2xl text-subtle leading-relaxed max-w-xl"
				>
					I empower individuals to take charge of their sexual and
					reproductive health through comprehensive care, education,
					and holistic wellness approaches.
				</p>

				<div
					class="opacity-0 animate-fade-up animation-delay-500 flex flex-col sm:flex-row gap-4 pt-4"
				>
					<GradientButton href="/about" color="pine" icon="arrow">
						Learn More
					</GradientButton>
					<GradientButton
						href="https://cal.com/dr-sita"
						external
						color="love"
						icon="calendar"
					>
						Book a Consultation
					</GradientButton>
				</div>
			</div>

			<!-- Image/Visual Side -->
			<div class="relative hidden md:flex items-center justify-center">
				<img
					src="portrait.png"
					alt="Dr. Sita"
					class="w-auto h-[50vh] md:h-[60vh] rounded-full opacity-0 animate-fade-in animation-delay-500 ring-4 ring-subtle/20"
				/>
			</div>
		</main>
	</div>

	<!-- Featured Content Section -->
	<section class="relative mt-24 py-32 px-6">
		<div class="absolute inset-0 bg-surface/30 backdrop-blur-sm"></div>
		<div class="max-w-6xl mx-auto">
			<h2
				class="text-4xl font-display text-text mb-16 text-center relative"
			>
				Featured Content
			</h2>

			<div class="grid md:grid-cols-3 gap-8 relative">
				<!-- YouTube Channel -->
				<div
					class="bg-base/40 rounded-2xl p-8 hover:bg-base/60 transition-colors duration-300"
				>
					<div class="text-love mb-4">
						<svg
							class="w-12 h-12"
							viewBox="0 0 24 24"
							fill="none"
							stroke="currentColor"
							stroke-width="1.5"
						>
							<!-- YouTube Play Button Icon -->
							<path
								d="M14 12L10.5 14V10L14 12Z"
								fill="currentColor"
								stroke="currentColor"
								stroke-width="1.5"
								stroke-linejoin="round"></path>
							<!-- Rounded Rectangle -->
							<rect
								x="3"
								y="6"
								width="18"
								height="12"
								rx="2"
								stroke="currentColor"></rect>
						</svg>
					</div>
					<h3 class="text-2xl font-display text-text mb-3">
						YouTube Channel
					</h3>
					<div class="flex items-center gap-2 mb-4">
						<span class="text-3xl font-bold text-love">1M+</span>
						<span class="text-lg text-subtle">subscribers</span>
					</div>
					<p class="text-lg text-subtle mb-6">
						Join our growing community learning about sexual health
						and wellness through engaging video content.
					</p>
					<a
						href="https://www.youtube.com/@drsitamindbodycare"
						class="text-love hover:text-love/80 inline-flex items-center gap-2 transition-colors duration-300 text-lg"
					>
						Watch Latest Videos
						<svg
							class="w-4 h-4"
							viewBox="0 0 24 24"
							fill="none"
							stroke="currentColor"
						>
							<path d="M5 12h14m-7-7 7 7-7 7"></path>
						</svg>
					</a>
				</div>

				<!-- Online Courses -->
				<div
					class="bg-base/40 rounded-2xl p-8 hover:bg-base/60 transition-colors duration-300"
				>
					<div class="text-iris mb-4">
						<svg
							class="w-12 h-12"
							viewBox="0 0 24 24"
							fill="none"
							stroke="currentColor"
							stroke-width="1.5"
						>
							<path d="M12 14l9-5-9-5-9 5 9 5z"></path>
							<path
								d="M12 14l6.16-3.422a12.083 12.083 0 01.665 6.479A11.952 11.952 0 0012 20.055a11.952 11.952 0 00-6.824-2.998 12.078 12.078 0 01.665-6.479L12 14z"
							></path>
							<path
								d="M12 14l-6.16-3.422a12.083 12.083 0 00-.665 6.479A11.952 11.952 0 0112 20.055a11.952 11.952 0 016.824-2.998 12.078 12.078 0 00-.665-6.479L12 14z"
							></path>
						</svg>
					</div>
					<h3 class="text-2xl font-display text-text mb-3">
						Online Courses
					</h3>
					<div class="flex items-center gap-2 mb-4">
						<span class="text-3xl font-bold text-iris">10+</span>
						<span class="text-lg text-subtle">courses</span>
					</div>
					<p class="text-lg text-subtle mb-6">
						Learn at your own pace with our comprehensive online
						courses on sexual health and wellness.
					</p>
					<a
						href="/courses"
						class="text-iris hover:text-iris/80 inline-flex items-center gap-2 transition-colors duration-300 text-lg"
					>
						Browse Courses
						<svg
							class="w-4 h-4"
							viewBox="0 0 24 24"
							fill="none"
							stroke="currentColor"
						>
							<path d="M5 12h14m-7-7 7 7-7 7"></path>
						</svg>
					</a>
				</div>

				<!-- SiRa Products -->
				<div
					class="bg-base/40 rounded-2xl p-8 hover:bg-base/60 transition-colors duration-300"
				>
					<div class="text-gold mb-4">
						<svg
							class="w-12 h-12"
							viewBox="0 0 24 24"
							fill="none"
							stroke="currentColor"
							stroke-width="1.5"
						>
							<path
								d="M20.59 13.41l-7.17 7.17a2 2 0 0 1-2.83 0L2 12V2h10l8.59 8.59a2 2 0 0 1 0 2.82z"
							></path>
							<line x1="7" y1="7" x2="7.01" y2="7"></line>
						</svg>
					</div>
					<h3 class="text-2xl font-display text-text mb-3">
						SiRa Products
					</h3>
					<div class="flex items-center gap-2 mb-4">
						<span class="text-3xl font-bold text-gold">20+</span>
						<span class="text-lg text-subtle">products</span>
					</div>
					<p class="text-lg text-subtle mb-6">
						Discover our line of carefully curated health products
						and supplements.
					</p>
					<a
						href="/products"
						class="text-gold hover:text-gold/80 inline-flex items-center gap-2 transition-colors duration-300 text-lg"
					>
						View Products
						<svg
							class="w-4 h-4"
							viewBox="0 0 24 24"
							fill="none"
							stroke="currentColor"
							stroke-width="1.5"
						>
							<path d="M5 12h14m-7-7 7 7-7 7"></path>
						</svg>
					</a>
				</div>
			</div>
		</div>
	</section>
</div>

<style>
	a {
		text-decoration: none;
	}
</style>
