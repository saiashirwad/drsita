---
import Button from "./Button.astro";
import FeaturedSection from "./FeaturedSection.astro";
import SocialIcons from "./SocialIcons.astro";
---

<SocialIcons />

<!-- Hero Section -->
<div
	class="flex-1 flex items-center px-4 sm:px-6 relative min-h-screen pt-24 lg:pt-40 pb-20"
>
	<main class="container mx-auto grid md:grid-cols-1 gap-6 md:gap-12">
		<!-- Text Content -->
		<div class="space-y-12 md:space-y-20">
			<div class="space-y-8 md:space-y-16">
				<div
					class="flex flex-col md:flex-row items-center gap-6 md:gap-6"
				>
					<h1
						class="text-6xl sm:text-7xl md:text-8xl lg:text-9xl font-display text-text tracking-tight leading-[1.2] md:leading-[2] text-center md:text-left"
					>
						Dr. Sita
					</h1>

					<div class="mt-4 md:mt-0">
						<div class="relative">
							<!-- Softer glow effect -->
							<div
								class="absolute -inset-0.5 rounded-full bg-gradient-to-br from-rose/20 via-love/20 to-pine/20 blur-md"
							>
							</div>
							<!-- Portrait container -->
							<div
								class="relative rounded-full bg-surface/10 p-[2px]"
							>
								<div
									class="rounded-full overflow-hidden w-[7em] md:w-[10em] h-[7em] md:h-[10em] relative"
								>
									<img
										src="/portrait.png"
										alt="Dr. Sita"
										class="w-full h-full object-cover"
									/>
								</div>
							</div>
						</div>
					</div>
				</div>

				<p
					class="text-2xl sm:text-3xl md:text-5xl lg:text-6xl font-medium text-center md:text-left px-2 md:px-0"
				>
					<span
						class="inline-block hover:scale-[1.02] transition-transform duration-300 text-rose"
						>Gynecologist</span
					>,
					<span
						class="inline-block hover:scale-[1.02] transition-transform duration-300 text-love"
						>Sexual Health Consultant</span
					>,
					<span
						class="inline-block hover:scale-[1.02] transition-transform duration-300 text-pine"
						>Youtuber</span
					>,
					<span
						class="inline-block hover:scale-[1.02] transition-transform duration-300 text-foam"
						>Wellness Coach</span
					> &
					<span
						class="inline-block hover:scale-[1.02] transition-transform duration-300 text-iris"
						>Educator</span
					>
				</p>
			</div>

			<div class="flex flex-col sm:flex-row gap-4 md:gap-8 px-2 md:px-0">
				<Button href="/about" color="pine" icon="mdi:arrow-right">
					Learn More
				</Button>
				<Button
					href="https://cal.com/dr-sita"
					external
					color="love"
					icon="mdi:calendar"
				>
					Book a Consultation
				</Button>
			</div>
		</div>
	</main>
</div>

<!-- Featured Content Section -->
<FeaturedSection />

<style>
	a {
		text-decoration: none;
	}
</style>
