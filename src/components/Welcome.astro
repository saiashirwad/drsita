---
import { Icon } from "astro-icon/components";
import Button from "./Button.astro";
import FeaturedSection from "./FeaturedSection.astro";
import SocialIcons from "./SocialIcons.astro";
---

<SocialIcons />

<!-- Hero Section -->
<div
	class="px-4 sm:px-6 relative min-h-screen pt-24 lg:pt-40 pb-20 container mx-auto grid md:grid-cols-1 gap-6 md:gap-12"
>
	<!-- Text Content -->
	<div class="space-y-12 md:space-y-20">
		<div class="space-y-8 md:space-y-16">
			<div class="flex flex-col md:flex-row items-center gap-6 md:gap-6">
				<h1
					class="text-6xl sm:text-7xl md:text-8xl lg:text-9xl font-display text-text tracking-tight leading-[1.2] md:leading-[2] text-center md:text-left"
				>
					Dr. Sita
				</h1>

				<div class="mt-4 md:mt-0">
					<div class="relative">
						<!-- Softer glow effect -->
						<div
							class="absolute -inset-0.5 rounded-full bg-gradient-to-br from-rose/20 via-love/20 to-pine/20 blur-md"
						>
						</div>
						<!-- Portrait container -->
						<div
							class="relative rounded-full bg-surface/10 p-[2px]"
						>
							<div
								class="rounded-full overflow-hidden w-[7em] md:w-[10em] h-[7em] md:h-[10em] relative"
							>
								<img
									src="/portrait.png"
									alt="Dr. Sita"
									class="w-full h-full object-cover"
								/>
							</div>
						</div>
					</div>
				</div>
			</div>

			<p
				class="text-2xl sm:text-3xl md:text-5xl lg:text-6xl font-medium text-center md:text-left px-2 md:px-0 leading-loose"
			>
				<span
					class="inline-block text-rose animate-fade-in opacity-0"
					style="animation-delay: 0s">Gynecologist,</span
				>
				<span
					class="inline-block text-love animate-fade-in opacity-0"
					style="animation-delay: 0.5s"
					>Sexual Health Consultant,</span
				>
				<span
					class="inline-block text-pine animate-fade-in opacity-0"
					style="animation-delay: 1s">Youtuber,</span
				>
				<span
					class="inline-block text-foam animate-fade-in opacity-0"
					style="animation-delay: 1.5s">Wellness Coach,</span
				>
				<span
					class="inline-block text-iris animate-fade-in opacity-0"
					style="animation-delay: 2s">Educator</span
				>
			</p>
		</div>

		<div
			class="flex flex-col sm:flex-row gap-4 md:gap-8 px-2 md:px-0 animate-fade-in opacity-0"
			style="animation-delay: 2.5s"
		>
			<Button
				href="/about"
				color="gold"
				icon="mdi:arrow-right"
				class="text-lg"
			>
				Learn More
			</Button>
			<Button
				href="https://cal.com/dr-sita"
				external
				color="love"
				icon="mdi:calendar"
				class="text-lg"
			>
				Book a Consultation
			</Button>
		</div>
	</div>
</div>

<section class="container mx-auto py-16 p-4 md:p-0">
	<div class="flex flex-col md:flex-row gap-12 md:gap-16 items-center">
		<div class="flex flex-col gap-32">
			<div class="flex flex-col md:flex-row items-center gap-8">
				<div class="w-full md:w-1/2 space-y-8 text-3xl lg:text-4xl">
					<p class="text-subtle leading-relaxed">
						Dr. Sitalakshmi bridges modern medicine with holistic
						wellness, bringing over 25 years of expertise as a
						Gynecologist and Sexual Health Consultant.
					</p>
				</div>
				<div class="hidden md:block w-full md:w-1/2">
					<div
						class="bg-pine/10 rounded-2xl w-full h-[400px] flex items-center justify-center relative overflow-hidden"
					>
						<div
							class="absolute inset-0 bg-gradient-to-br from-pine/5 via-transparent to-pine/5"
						>
						</div>
						<div class="breathing-icon">
							<Icon
								name="mdi:hospital-building"
								class="w-48 h-48 text-pine relative"
							/>
						</div>
					</div>
				</div>
			</div>

			<div class="flex flex-col md:flex-row-reverse items-center gap-8">
				<div class="w-full md:w-1/2 space-y-8 text-3xl lg:text-4xl">
					<p class="text-subtle leading-relaxed">
						Her innovative group therapy approach transforms lives
						through a unique integration of evidence-based medicine
						with mindfulness, yoga, and acupuncture.
					</p>
				</div>
				<div class="hidden md:block w-full md:w-1/2">
					<div
						class="bg-rose/10 rounded-2xl w-full h-[400px] flex items-center justify-center relative overflow-hidden"
					>
						<div
							class="absolute inset-0 bg-gradient-to-br from-rose/5 via-transparent to-rose/5"
						>
						</div>
						<div class="breathing-icon">
							<Icon
								name="mdi:meditation"
								class="w-48 h-48 text-rose relative"
							/>
						</div>
					</div>
				</div>
			</div>

			<div class="flex flex-col md:flex-row items-center gap-8">
				<div class="w-full md:w-1/2 space-y-8 text-3xl lg:text-4xl">
					<p class="text-subtle leading-relaxed">
						Reaching 1.3M+ subscribers through her YouTube channels,
						she empowers individuals with essential knowledge for
						complete wellbeing.
					</p>
				</div>
				<div class="hidden md:block w-full md:w-1/2">
					<div
						class="bg-love/10 rounded-2xl w-full h-[400px] flex items-center justify-center relative overflow-hidden"
					>
						<div
							class="absolute inset-0 bg-gradient-to-br from-love/5 via-transparent to-love/5"
						>
						</div>
						<div class="breathing-icon">
							<Icon
								name="mdi:youtube"
								class="w-48 h-48 text-love relative"
							/>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</section>

<FeaturedSection />

<style>
	a {
		text-decoration: none;
	}

	@keyframes gentle-breathe {
		0%,
		100% {
			transform: scale(1);
			opacity: 1;
		}
		50% {
			transform: scale(1.02);
			opacity: 0.95;
		}
	}

	.breathing-icon {
		animation: gentle-breathe 6s ease-in-out infinite;
	}
</style>
