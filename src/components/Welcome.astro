---
import GradientButton from "./GradientButton.astro";
import Navbar from "./Navbar.astro";
import BackgroundShapes from "./BackgroundShapes.astro";
---

<Navbar />

<div
	class="min-h-screen flex items-center justify-center px-6 pt-32 pb-24 bg-base"
>
	<BackgroundShapes />
	<main
		class="max-w-6xl w-full mx-auto grid md:grid-cols-2 gap-12 items-center"
	>
		<!-- Text Content -->
		<div class="space-y-8">
			<div class="space-y-4">
				<h1
					class="opacity-0 animate-fade-up text-5xl md:text-6xl lg:text-7xl font-display text-text tracking-tight"
				>
					Hi, I'm Dr. Sita
				</h1>
				<p
					class="opacity-0 animate-fade-up animation-delay-300 text-3xl md:text-4xl text-subtle/90 font-light"
				>
					Sexual Health Consultant, Youtuber, Wellness coach &
					Educator
				</p>
			</div>

			<p
				class="opacity-0 animate-fade-up animation-delay-500 text-xl text-subtle leading-relaxed max-w-xl"
			>
				I empower individuals to take charge of their sexual and
				reproductive health through comprehensive care, education, and
				holistic wellness approaches.
			</p>

			<div
				class="opacity-0 animate-fade-up animation-delay-500 flex flex-col sm:flex-row gap-4 pt-4"
			>
				<GradientButton href="/about" color="pine" icon="arrow">
					Learn More
				</GradientButton>
				<GradientButton href="/contact" color="love" icon="calendar">
					Book a Consultation
				</GradientButton>
			</div>
		</div>

		<!-- Image/Visual Side -->
		<div class="relative hidden md:block">
			<div class="relative w-[400px] h-[400px] mx-auto">
				<img
					src="portrait.jpeg"
					alt="Dr. Sita"
					class="w-full h-full object-cover rounded-2xl shadow-2xl opacity-0 animate-fade-in animation-delay-500"
				/>
				<!-- Decorative Elements -->
				<div
					class="absolute inset-0 rounded-2xl bg-gradient-to-tr from-pine/20 to-love/20 animate-pulse opacity-0 animate-fade-in animation-delay-500"
				>
				</div>
				<div
					class="absolute -bottom-6 -right-6 w-24 h-24 bg-rose/10 rounded-full blur-xl opacity-0 animate-fade-in animation-delay-500"
				>
				</div>
				<div
					class="absolute -top-6 -left-6 w-32 h-32 bg-pine/10 rounded-full blur-xl opacity-0 animate-fade-in animation-delay-500"
				>
				</div>
			</div>
		</div>
	</main>

	<!-- Social Links -->
	<div class="absolute bottom-12 left-0 right-0">
		<div
			class="flex justify-center gap-8 opacity-0 animate-fade-up animation-delay-500"
		>
			<a
				href="https://www.youtube.com/@DrSitasMindBodyCare"
				class="group flex flex-col items-center text-subtle/70 hover:text-pine transition-all duration-300"
				aria-label="YouTube Channel"
			>
				<div
					class="p-3 rounded-full bg-surface/50 group-hover:bg-surface/80 transition-colors duration-300"
				>
					<svg
						class="w-6 h-6"
						viewBox="0 0 24 24"
						fill="currentColor"
					>
						<path
							d="M23.498 6.186a3.016 3.016 0 0 0-2.122-2.136C19.505 3.545 12 3.545 12 3.545s-7.505 0-9.377.505A3.017 3.017 0 0 0 .502 6.186C0 8.07 0 12 0 12s0 3.93.502 5.814a3.016 3.016 0 0 0 2.122 2.136c1.871.505 9.376.505 9.376.505s7.505 0 9.377-.505a3.015 3.015 0 0 0 2.122-2.136C24 15.93 24 12 24 12s0-3.93-.502-5.814zM9.545 15.568V8.432L15.818 12l-6.273 3.568z"
						></path>
					</svg>
				</div>
				<span
					class="mt-2 text-sm font-medium opacity-0 group-hover:opacity-100 transform translate-y-1 group-hover:translate-y-0 transition-all duration-300"
				>
					YouTube
				</span>
			</a>
			<a
				href="https://www.instagram.com/askdrsita"
				class="group flex flex-col items-center text-subtle/70 hover:text-pine transition-all duration-300"
				aria-label="Instagram Profile"
			>
				<div
					class="p-3 rounded-full bg-surface/50 group-hover:bg-surface/80 transition-colors duration-300"
				>
					<svg
						class="w-6 h-6"
						viewBox="0 0 24 24"
						fill="currentColor"
					>
						<path
							d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073z"
						></path>
					</svg>
				</div>
				<span
					class="mt-2 text-sm font-medium opacity-0 group-hover:opacity-100 transform translate-y-1 group-hover:translate-y-0 transition-all duration-300"
				>
					Instagram
				</span>
			</a>
		</div>
	</div>
</div>

<style>
	a {
		text-decoration: none;
	}
</style>
