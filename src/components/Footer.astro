---
const currentYear = new Date().getFullYear();

const footerLinks = [
    {
        title: "Quick Links",
        links: [
            { href: "/", label: "Home" },
            { href: "/about", label: "About" },
            { href: "/speaking", label: "Speaking" },
            { href: "/contact", label: "Contact" },
        ],
    },
    {
        title: "Resources",
        links: [
            {
                href: "https://www.youtube.com/@drsitamindbodycare",
                label: "YouTube Channel",
                external: true,
            },
            { href: "/courses", label: "Online Courses" },
            { href: "/products", label: "SiRa Products" },
        ],
    },
];
---

<footer class="bg-surface/30 border-t border-highlight-low mt-32">
    <div class="max-w-6xl mx-auto px-6 py-16">
        <div class="grid grid-cols-1 md:grid-cols-4 gap-12 mb-16">
            <!-- Brand -->
            <div class="space-y-4">
                <a href="/" class="inline-block">
                    <h3 class="text-2xl font-display text-text">Dr. Sita</h3>
                </a>
                <p class="text-subtle/90 leading-relaxed">
                    Sexual Health Consultant, Gynecologist, Youtuber, Wellness
                    coach & Educator
                </p>
                <div class="flex gap-4 pt-4">
                    <a
                        href="https://www.youtube.com/@drsitamindbodycare"
                        class="text-subtle/70 hover:text-pine transition-all duration-300"
                        aria-label="YouTube Channel"
                    >
                        <div
                            class="p-2 rounded-full bg-surface/50 hover:bg-surface/80 transition-colors duration-300"
                        >
                            <svg
                                class="w-5 h-5"
                                viewBox="0 0 24 24"
                                fill="currentColor"
                            >
                                <path
                                    d="M23.498 6.186a3.016 3.016 0 0 0-2.122-2.136C19.505 3.545 12 3.545 12 3.545s-7.505 0-9.377.505A3.017 3.017 0 0 0 .502 6.186C0 8.07 0 12 0 12s0 3.93.502 5.814a3.016 3.016 0 0 0 2.122 2.136c1.871.505 9.376.505 9.376.505s7.505 0 9.377-.505a3.015 3.015 0 0 0 2.122-2.136C24 15.93 24 12 24 12s0-3.93-.502-5.814zM9.545 15.568V8.432L15.818 12l-6.273 3.568z"
                                ></path>
                            </svg>
                        </div>
                    </a>
                    <a
                        href="https://www.instagram.com/askdrsita"
                        class="text-subtle/70 hover:text-pine transition-all duration-300"
                        aria-label="Instagram Profile"
                    >
                        <div
                            class="p-2 rounded-full bg-surface/50 hover:bg-surface/80 transition-colors duration-300"
                        >
                            <svg
                                class="w-5 h-5"
                                viewBox="0 0 24 24"
                                fill="currentColor"
                            >
                                <path
                                    d="M12 2c2.717 0 3.056.01 4.122.06 1.065.05 1.79.217 2.428.465.66.254 1.216.598 1.772 1.153.509.5.902 1.105 1.153 1.772.247.637.415 1.363.465 2.428.047 1.066.06 1.405.06 4.122 0 2.717-.01 3.056-.06 4.122-.05 1.065-.218 1.79-.465 2.428a4.883 4.883 0 0 1-1.153 1.772c-.5.508-1.105.902-1.772 1.153-.637.247-1.363.415-2.428.465-1.066.047-1.405.06-4.122.06-2.717 0-3.056-.01-4.122-.06-1.065-.05-1.79-.218-2.428-.465a4.89 4.89 0 0 1-1.772-1.153 4.904 4.904 0 0 1-1.153-1.772c-.248-.637-.415-1.363-.465-2.428C2.013 15.056 2 14.717 2 12c0-2.717.01-3.056.06-4.122.05-1.066.217-1.79.465-2.428a4.88 4.88 0 0 1 1.153-1.772A4.897 4.897 0 0 1 5.45 2.525c.638-.248 1.362-.415 2.428-.465C8.944 2.013 9.283 2 12 2zm0 5a5 5 0 1 0 0 10 5 5 0 0 0 0-10zm6.5-.25a1.25 1.25 0 1 0-2.5 0 1.25 1.25 0 0 0 2.5 0zM12 9a3 3 0 1 1 0 6 3 3 0 0 1 0-6z"
                                ></path>
                            </svg>
                        </div>
                    </a>
                </div>
            </div>

            <!-- Links -->
            {
                footerLinks.map(({ title, links }) => (
                    <div class="space-y-4">
                        <h4 class="text-lg font-display text-text">{title}</h4>
                        <ul class="space-y-3">
                            {links.map(({ href, label, external }) => (
                                <li>
                                    <a
                                        href={href}
                                        class="text-subtle/90 hover:text-pine transition-colors duration-300"
                                        {...(external && {
                                            target: "_blank",
                                            rel: "noopener noreferrer",
                                        })}
                                    >
                                        {label}
                                    </a>
                                </li>
                            ))}
                        </ul>
                    </div>
                ))
            }

            <!-- Contact -->
            <div class="space-y-4">
                <h4 class="text-lg font-display text-text">Contact</h4>
                <ul class="space-y-3">
                    <li>
                        <a
                            href="mailto:contact@drsita.com"
                            class="text-subtle/90 hover:text-pine transition-colors duration-300"
                        >
                            contact@drsita.com
                        </a>
                    </li>
                    <li>
                        <a
                            href="tel:+919876543210"
                            class="text-subtle/90 hover:text-pine transition-colors duration-300"
                        >
                            +91 98765 43210
                        </a>
                    </li>
                    <li class="text-subtle/90">Kerala, India</li>
                </ul>
            </div>
        </div>

        <!-- Copyright -->
        <div class="pt-8 border-t border-highlight-low">
            <p class="text-subtle/70 text-sm text-center">
                Â© {currentYear} Dr. Sita. All rights reserved.
            </p>
        </div>
    </div>
</footer>
