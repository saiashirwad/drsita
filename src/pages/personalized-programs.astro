---
import Layout from "../layouts/Layout.astro";
import Navbar from "../components/Navbar.astro";
import BackgroundShapes from "../components/BackgroundShapes.astro";
import GradientButton from "../components/GradientButton.astro";
---

<Layout title="Personalized Programs - Dr. Sita">
    <Navbar />

    <main class="bg-base min-h-screen">
        <!-- Hero Section -->
        <section
            class="min-h-[60vh] relative flex items-center justify-center pt-32 pb-24 px-4 sm:px-6"
        >
            <BackgroundShapes />
            <div class="max-w-container-xl mx-auto w-full">
                <div class="max-w-container-md mx-auto text-center">
                    <h1
                        class="text-6xl md:text-7xl lg:text-8xl font-display text-text tracking-tight opacity-0 animate-fade-up mb-8"
                    >
                        Personalized Programs
                    </h1>
                    <p
                        class="text-3xl md:text-4xl text-subtle/90 font-light opacity-0 animate-fade-up animation-delay-100 leading-relaxed"
                    >
                        Tailored treatment plans designed for your unique
                        journey to wellness.
                    </p>
                </div>
            </div>
        </section>

        <!-- Overview Section -->
        <section class="py-24 px-4 sm:px-6">
            <div class="max-w-container-lg mx-auto">
                <div
                    class="bg-surface/30 rounded-[32px] p-12 border border-highlight-med/10 backdrop-blur-xl"
                >
                    <h2 class="text-4xl font-display text-text mb-8">
                        Why Personalized Care Matters
                    </h2>
                    <p class="text-xl text-subtle/90 leading-relaxed mb-8">
                        At Dr. Sita's Mind Body Care, we understand that every
                        individual's health journey is unique. Our personalized
                        programs are carefully crafted to address your specific
                        needs, challenges, and goals, ensuring the most
                        effective path to healing and wellness.
                    </p>
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-8 mt-12">
                        <div>
                            <h3 class="text-2xl font-display text-foam mb-4">
                                Our Process
                            </h3>
                            <ul class="space-y-4">
                                <li
                                    class="flex items-start gap-3 text-lg text-subtle/90"
                                >
                                    <div
                                        class="w-2 h-2 rounded-full bg-foam mt-2.5"
                                    >
                                    </div>
                                    <span>Comprehensive initial assessment</span
                                    >
                                </li>
                                <li
                                    class="flex items-start gap-3 text-lg text-subtle/90"
                                >
                                    <div
                                        class="w-2 h-2 rounded-full bg-foam mt-2.5"
                                    >
                                    </div>
                                    <span>Customized treatment planning</span>
                                </li>
                                <li
                                    class="flex items-start gap-3 text-lg text-subtle/90"
                                >
                                    <div
                                        class="w-2 h-2 rounded-full bg-foam mt-2.5"
                                    >
                                    </div>
                                    <span>Regular progress monitoring</span>
                                </li>
                                <li
                                    class="flex items-start gap-3 text-lg text-subtle/90"
                                >
                                    <div
                                        class="w-2 h-2 rounded-full bg-foam mt-2.5"
                                    >
                                    </div>
                                    <span>Ongoing plan adjustments</span>
                                </li>
                            </ul>
                        </div>
                        <div>
                            <h3 class="text-2xl font-display text-iris mb-4">
                                Program Features
                            </h3>
                            <ul class="space-y-4">
                                <li
                                    class="flex items-start gap-3 text-lg text-subtle/90"
                                >
                                    <div
                                        class="w-2 h-2 rounded-full bg-iris mt-2.5"
                                    >
                                    </div>
                                    <span>One-on-one consultations</span>
                                </li>
                                <li
                                    class="flex items-start gap-3 text-lg text-subtle/90"
                                >
                                    <div
                                        class="w-2 h-2 rounded-full bg-iris mt-2.5"
                                    >
                                    </div>
                                    <span>Flexible scheduling options</span>
                                </li>
                                <li
                                    class="flex items-start gap-3 text-lg text-subtle/90"
                                >
                                    <div
                                        class="w-2 h-2 rounded-full bg-iris mt-2.5"
                                    >
                                    </div>
                                    <span>Integrated therapy approaches</span>
                                </li>
                                <li
                                    class="flex items-start gap-3 text-lg text-subtle/90"
                                >
                                    <div
                                        class="w-2 h-2 rounded-full bg-iris mt-2.5"
                                    >
                                    </div>
                                    <span>Ongoing support and guidance</span>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <!-- Programs Section -->
        <section class="py-24 px-4 sm:px-6">
            <div class="max-w-container-lg mx-auto">
                <h2 class="text-4xl font-display text-text mb-12">
                    Specialized Programs
                </h2>

                <div class="grid grid-cols-1 gap-8">
                    <div
                        class="bg-surface/30 rounded-[32px] p-12 border border-highlight-med/10 backdrop-blur-xl"
                    >
                        <h3 class="text-3xl font-display text-foam mb-6">
                            Sexual Health and Wellness
                        </h3>
                        <p class="text-xl text-subtle/90 leading-relaxed mb-6">
                            Comprehensive programs addressing various aspects of
                            sexual health, including dysfunction treatment,
                            intimacy enhancement, and emotional well-being.
                        </p>
                        <div class="mt-8">
                            <h4 class="text-xl font-display text-foam mb-4">
                                Program Components:
                            </h4>
                            <ul class="space-y-4">
                                <li
                                    class="flex items-start gap-3 text-lg text-subtle/90"
                                >
                                    <div
                                        class="w-2 h-2 rounded-full bg-foam mt-2.5"
                                    >
                                    </div>
                                    <span>Personalized therapy sessions</span>
                                </li>
                                <li
                                    class="flex items-start gap-3 text-lg text-subtle/90"
                                >
                                    <div
                                        class="w-2 h-2 rounded-full bg-foam mt-2.5"
                                    >
                                    </div>
                                    <span>Educational workshops</span>
                                </li>
                                <li
                                    class="flex items-start gap-3 text-lg text-subtle/90"
                                >
                                    <div
                                        class="w-2 h-2 rounded-full bg-foam mt-2.5"
                                    >
                                    </div>
                                    <span>Mindfulness techniques</span>
                                </li>
                            </ul>
                        </div>
                    </div>

                    <div
                        class="bg-surface/30 rounded-[32px] p-12 border border-highlight-med/10 backdrop-blur-xl"
                    >
                        <h3 class="text-3xl font-display text-iris mb-6">
                            Mental Health Support
                        </h3>
                        <p class="text-xl text-subtle/90 leading-relaxed mb-6">
                            Tailored programs for managing anxiety, stress, and
                            emotional challenges through a combination of
                            therapeutic approaches and holistic techniques.
                        </p>
                        <div class="mt-8">
                            <h4 class="text-xl font-display text-iris mb-4">
                                Focus Areas:
                            </h4>
                            <ul class="space-y-4">
                                <li
                                    class="flex items-start gap-3 text-lg text-subtle/90"
                                >
                                    <div
                                        class="w-2 h-2 rounded-full bg-iris mt-2.5"
                                    >
                                    </div>
                                    <span>Stress management techniques</span>
                                </li>
                                <li
                                    class="flex items-start gap-3 text-lg text-subtle/90"
                                >
                                    <div
                                        class="w-2 h-2 rounded-full bg-iris mt-2.5"
                                    >
                                    </div>
                                    <span>Anxiety reduction strategies</span>
                                </li>
                                <li
                                    class="flex items-start gap-3 text-lg text-subtle/90"
                                >
                                    <div
                                        class="w-2 h-2 rounded-full bg-iris mt-2.5"
                                    >
                                    </div>
                                    <span>Emotional regulation skills</span>
                                </li>
                            </ul>
                        </div>
                    </div>

                    <div
                        class="bg-surface/30 rounded-[32px] p-12 border border-highlight-med/10 backdrop-blur-xl"
                    >
                        <h3 class="text-3xl font-display text-love mb-6">
                            Relationship Enhancement
                        </h3>
                        <p class="text-xl text-subtle/90 leading-relaxed mb-6">
                            Programs designed to strengthen relationships,
                            improve communication, and deepen emotional
                            connections between partners.
                        </p>
                        <div class="mt-8">
                            <h4 class="text-xl font-display text-love mb-4">
                                Key Elements:
                            </h4>
                            <ul class="space-y-4">
                                <li
                                    class="flex items-start gap-3 text-lg text-subtle/90"
                                >
                                    <div
                                        class="w-2 h-2 rounded-full bg-love mt-2.5"
                                    >
                                    </div>
                                    <span>Communication workshops</span>
                                </li>
                                <li
                                    class="flex items-start gap-3 text-lg text-subtle/90"
                                >
                                    <div
                                        class="w-2 h-2 rounded-full bg-love mt-2.5"
                                    >
                                    </div>
                                    <span>Intimacy building exercises</span>
                                </li>
                                <li
                                    class="flex items-start gap-3 text-lg text-subtle/90"
                                >
                                    <div
                                        class="w-2 h-2 rounded-full bg-love mt-2.5"
                                    >
                                    </div>
                                    <span>Conflict resolution training</span>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <!-- Testimonials Section -->
        <section class="py-24 px-4 sm:px-6">
            <div class="max-w-container-lg mx-auto">
                <h2 class="text-4xl font-display text-text mb-12">
                    Client Experiences
                </h2>
                <div class="grid grid-cols-1 gap-8">
                    <div
                        class="bg-surface/30 rounded-[32px] p-12 border border-highlight-med/10 backdrop-blur-xl"
                    >
                        <div class="space-y-8">
                            <blockquote
                                class="text-xl text-subtle/90 leading-relaxed"
                            >
                                "The personalized approach made all the
                                difference. Dr. Sita took the time to understand
                                my specific needs and created a program that
                                truly worked for me."
                                <footer class="mt-4 text-lg text-foam">
                                    - Client from Kerala
                                </footer>
                            </blockquote>
                            <blockquote
                                class="text-xl text-subtle/90 leading-relaxed"
                            >
                                "I appreciated how my program evolved with my
                                progress. The continuous support and adjustments
                                helped me achieve results I didn't think were
                                possible."
                                <footer class="mt-4 text-lg text-foam">
                                    - Client from Chennai
                                </footer>
                            </blockquote>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <!-- CTA Section -->
        <section class="py-24 px-4 sm:px-6">
            <div class="max-w-container-lg mx-auto">
                <div
                    class="bg-surface/30 rounded-[32px] p-12 border border-highlight-med/10 backdrop-blur-xl text-center"
                >
                    <h2
                        class="text-4xl md:text-5xl font-display text-text mb-8"
                    >
                        Start Your Personalized Journey
                    </h2>
                    <p
                        class="text-xl text-subtle/90 leading-relaxed mb-8 max-w-2xl mx-auto"
                    >
                        Take the first step towards personalized care. Schedule
                        a consultation to discuss your unique needs and goals.
                    </p>
                    <GradientButton
                        href="/contact"
                        color="love"
                        icon="calendar"
                    >
                        Schedule a Consultation
                    </GradientButton>
                </div>
            </div>
        </section>
    </main>
</Layout>
