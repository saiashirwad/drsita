---
import BaseLayout from "../layouts/BaseLayout.astro";
import Navbar from "../components/Navbar.astro";
import Button from "../components/Button.astro";
---

<BaseLayout title="Services | Dr. Sita">
    <Navbar />

    <main class="bg-base min-h-screen">
        <!-- Hero Section -->
        <section
            class="min-h-[60vh] relative flex items-center justify-center pt-32 pb-24 px-4 sm:px-6"
        >
            <div class="container mx-auto w-full">
                <div class="container mx-auto text-center">
                    <h1
                        class="text-6xl md:text-7xl lg:text-8xl font-display text-text tracking-tight opacity-0 animate-fade-up mb-8"
                    >
                        Our Services
                    </h1>
                    <p
                        class="text-3xl md:text-4xl text-subtle/90 font-light opacity-0 animate-fade-up animation-delay-100 leading-relaxed"
                    >
                        Comprehensive care for your physical, emotional, and
                        sexual well-being.
                    </p>
                </div>
            </div>
        </section>

        <!-- Batch Therapy Section -->
        <section class="py-24 px-4 sm:px-6">
            <div class="container mx-auto">
                <div class="grid grid-cols-1 gap-8">
                    <div
                        class="bg-surface/30 rounded-[32px] p-12 border border-highlight-med/10 backdrop-blur-xl hover:border-highlight-med/20 transition-all duration-300"
                    >
                        <div
                            class="bg-foam/10 w-16 h-16 rounded-2xl flex items-center justify-center mb-8"
                        >
                            <svg
                                class="w-8 h-8 text-foam"
                                viewBox="0 0 24 24"
                                fill="none"
                                stroke="currentColor"
                                stroke-width="1.5"
                            >
                                <path
                                    d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z"
                                ></path>
                            </svg>
                        </div>
                        <h3 class="text-3xl font-display text-text mb-4">
                            Couples Therapy
                        </h3>
                        <p
                            class="text-xl text-subtle/90 leading-relaxed max-w-2xl"
                        >
                            Specialized programs for couples dealing with
                            intimacy challenges and unconsummated marriages.
                        </p>
                        <a
                            href="/couples-therapy"
                            class="inline-flex items-center text-foam hover:text-foam/80 mt-6 text-lg transition-colors"
                        >
                            Learn more
                            <svg
                                class="w-5 h-5 ml-2"
                                viewBox="0 0 20 20"
                                fill="currentColor"
                            >
                                <path
                                    fill-rule="evenodd"
                                    d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z"
                                    clip-rule="evenodd"></path>
                            </svg>
                        </a>
                    </div>

                    <div
                        class="bg-surface/30 rounded-[32px] p-12 border border-highlight-med/10 backdrop-blur-xl hover:border-highlight-med/20 transition-all duration-300"
                    >
                        <div
                            class="bg-iris/10 w-16 h-16 rounded-2xl flex items-center justify-center mb-8"
                        >
                            <svg
                                class="w-8 h-8 text-iris"
                                viewBox="0 0 24 24"
                                fill="none"
                                stroke="currentColor"
                                stroke-width="1.5"
                            >
                                <path
                                    d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-6 9l2 2 4-4"
                                ></path>
                            </svg>
                        </div>
                        <h3 class="text-3xl font-display text-text mb-4">
                            Holistic Approach
                        </h3>
                        <p
                            class="text-xl text-subtle/90 leading-relaxed max-w-2xl"
                        >
                            Combining counseling, mindfulness, yoga, and
                            acupuncture for comprehensive healing.
                        </p>
                        <a
                            href="/holistic-approach"
                            class="inline-flex items-center text-iris hover:text-iris/80 mt-6 text-lg transition-colors"
                        >
                            Our methods
                            <svg
                                class="w-5 h-5 ml-2"
                                viewBox="0 0 20 20"
                                fill="currentColor"
                            >
                                <path
                                    fill-rule="evenodd"
                                    d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z"
                                    clip-rule="evenodd"></path>
                            </svg>
                        </a>
                    </div>

                    <div
                        class="bg-surface/30 rounded-[32px] p-12 border border-highlight-med/10 backdrop-blur-xl hover:border-highlight-med/20 transition-all duration-300"
                    >
                        <div
                            class="bg-love/10 w-16 h-16 rounded-2xl flex items-center justify-center mb-8"
                        >
                            <svg
                                class="w-8 h-8 text-love"
                                viewBox="0 0 24 24"
                                fill="none"
                                stroke="currentColor"
                                stroke-width="1.5"
                            >
                                <path
                                    d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"
                                ></path>
                            </svg>
                        </div>
                        <h3 class="text-3xl font-display text-text mb-4">
                            Personalized Programs
                        </h3>
                        <p
                            class="text-xl text-subtle/90 leading-relaxed max-w-2xl"
                        >
                            Tailored treatment plans for sexual dysfunction,
                            intimacy issues, and relationship enhancement.
                        </p>
                        <a
                            href="/personalized-programs"
                            class="inline-flex items-center text-love hover:text-love/80 mt-6 text-lg transition-colors"
                        >
                            Explore programs
                            <svg
                                class="w-5 h-5 ml-2"
                                viewBox="0 0 20 20"
                                fill="currentColor"
                            >
                                <path
                                    fill-rule="evenodd"
                                    d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z"
                                    clip-rule="evenodd"></path>
                            </svg>
                        </a>
                    </div>
                </div>
            </div>
        </section>

        <!-- Consultations Section -->
        <section class="py-24 px-4 sm:px-6">
            <div class="container mx-auto">
                <h2 class="text-5xl font-display text-text mb-12">
                    Consultations
                </h2>

                <div class="grid grid-cols-1 gap-8">
                    <div
                        class="bg-surface/30 rounded-[32px] p-12 border border-highlight-med/10 backdrop-blur-xl hover:border-highlight-med/20 transition-all duration-300"
                    >
                        <div
                            class="bg-iris/10 w-16 h-16 rounded-2xl flex items-center justify-center mb-8"
                        >
                            <svg
                                class="w-8 h-8 text-iris"
                                viewBox="0 0 24 24"
                                fill="none"
                                stroke="currentColor"
                                stroke-width="1.5"
                            >
                                <path
                                    d="M15 10l4.553-2.276A1 1 0 0121 8.618v6.764a1 1 0 01-1.447.894L15 14M5 18h8a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v8a2 2 0 002 2z"
                                ></path>
                            </svg>
                        </div>
                        <h3 class="text-3xl font-display text-text mb-4">
                            Online Consultations
                        </h3>
                        <p
                            class="text-xl text-subtle/90 leading-relaxed max-w-2xl"
                        >
                            Convenient, private consultations from the comfort
                            of your home. Available globally through secure
                            video conferencing.
                        </p>
                        <a
                            href="/contact"
                            class="inline-flex items-center text-iris hover:text-iris/80 mt-6 text-lg transition-colors"
                        >
                            Schedule now
                            <svg
                                class="w-5 h-5 ml-2"
                                viewBox="0 0 20 20"
                                fill="currentColor"
                            >
                                <path
                                    fill-rule="evenodd"
                                    d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z"
                                    clip-rule="evenodd"></path>
                            </svg>
                        </a>
                    </div>

                    <div
                        class="bg-surface/30 rounded-[32px] p-12 border border-highlight-med/10 backdrop-blur-xl hover:border-highlight-med/20 transition-all duration-300"
                    >
                        <div
                            class="bg-gold/10 w-16 h-16 rounded-2xl flex items-center justify-center mb-8"
                        >
                            <svg
                                class="w-8 h-8 text-gold"
                                viewBox="0 0 24 24"
                                fill="none"
                                stroke="currentColor"
                                stroke-width="1.5"
                            >
                                <path
                                    d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"
                                ></path>
                            </svg>
                        </div>
                        <h3 class="text-3xl font-display text-text mb-4">
                            In-Person Consultations
                        </h3>
                        <p
                            class="text-xl text-subtle/90 leading-relaxed max-w-2xl"
                        >
                            Direct consultations at our clinic in Thrissur,
                            Kerala. Comprehensive care in a comfortable setting.
                        </p>
                        <a
                            href="/contact"
                            class="inline-flex items-center text-gold hover:text-gold/80 mt-6 text-lg transition-colors"
                        >
                            Visit us
                            <svg
                                class="w-5 h-5 ml-2"
                                viewBox="0 0 20 20"
                                fill="currentColor"
                            >
                                <path
                                    fill-rule="evenodd"
                                    d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z"
                                    clip-rule="evenodd"></path>
                            </svg>
                        </a>
                    </div>
                </div>
            </div>
        </section>

        <!-- CTA Section -->
        <section class="py-24 px-4 sm:px-6">
            <div class="container mx-auto">
                <div
                    class="bg-surface/30 rounded-[32px] p-12 border border-highlight-med/10 backdrop-blur-xl text-center"
                >
                    <h2
                        class="text-4xl md:text-5xl font-display text-text mb-8"
                    >
                        Ready to begin your journey to wellness?
                    </h2>
                    <Button href="/contact" color="love" icon="mdi:calendar"
                        >Schedule a Consultation</Button
                    >
                </div>
            </div>
        </section>
    </main>
</BaseLayout>
