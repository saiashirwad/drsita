---
import Layout from "../layouts/Layout.astro";
import Navbar from "../components/Navbar.astro";
import BackgroundShapes from "../components/BackgroundShapes.astro";
import GradientButton from "../components/GradientButton.astro";
---

<Layout title="Services - Dr. Sita">
    <Navbar />

    <main class="bg-base min-h-screen">
        <!-- Hero Section -->
        <section
            class="min-h-[60vh] relative flex items-center justify-center pt-32 pb-24 px-4 sm:px-6"
        >
            <BackgroundShapes />
            <div class="max-w-container-xl mx-auto w-full">
                <div class="max-w-container-md mx-auto text-center">
                    <h1
                        class="text-6xl md:text-7xl lg:text-8xl font-display text-text tracking-tight opacity-0 animate-fade-up mb-8"
                    >
                        Our Services
                    </h1>
                    <p
                        class="text-3xl md:text-4xl text-subtle/90 font-light opacity-0 animate-fade-up animation-delay-100 leading-relaxed"
                    >
                        Comprehensive care for your physical, emotional, and
                        sexual well-being.
                    </p>
                </div>
            </div>
        </section>

        <!-- Batch Therapy Section -->
        <section class="py-24 px-4 sm:px-6 bg-surface/30">
            <div class="max-w-container-lg mx-auto">
                <div class="space-y-12">
                    <div>
                        <h2 class="text-5xl font-display text-text mb-8">
                            Batch Therapy
                        </h2>
                        <p class="text-2xl text-subtle/90 leading-relaxed">
                            A groundbreaking and comprehensive therapy designed
                            to address the multifaceted challenges of sexual
                            dysfunction and intimacy issues.
                        </p>
                    </div>

                    <div class="grid gap-8">
                        <div
                            class="bg-surface/30 rounded-3xl p-8 border border-highlight-med/10 backdrop-blur-xl"
                        >
                            <h3 class="text-3xl font-display text-foam mb-4">
                                For Couples
                            </h3>
                            <ul class="space-y-4">
                                <li
                                    class="flex items-start gap-3 text-xl text-subtle/90"
                                >
                                    <div
                                        class="w-2 h-2 rounded-full bg-foam mt-2.5"
                                    >
                                    </div>
                                    <span
                                        >Unconsummated marriages: Building
                                        emotional and physical intimacy</span
                                    >
                                </li>
                                <li
                                    class="flex items-start gap-3 text-xl text-subtle/90"
                                >
                                    <div
                                        class="w-2 h-2 rounded-full bg-foam mt-2.5"
                                    >
                                    </div>
                                    <span
                                        >Sexual dysfunction treatment:
                                        Addressing vaginismus, erectile
                                        dysfunction, and more</span
                                    >
                                </li>
                                <li
                                    class="flex items-start gap-3 text-xl text-subtle/90"
                                >
                                    <div
                                        class="w-2 h-2 rounded-full bg-foam mt-2.5"
                                    >
                                    </div>
                                    <span
                                        >Intimacy restoration: Rekindling
                                        connection in long-term relationships</span
                                    >
                                </li>
                            </ul>
                        </div>

                        <div
                            class="bg-surface/30 rounded-3xl p-8 border border-highlight-med/10 backdrop-blur-xl"
                        >
                            <h3 class="text-3xl font-display text-love mb-4">
                                Our Approach
                            </h3>
                            <ul class="space-y-4">
                                <li
                                    class="flex items-start gap-3 text-xl text-subtle/90"
                                >
                                    <div
                                        class="w-2 h-2 rounded-full bg-love mt-2.5"
                                    >
                                    </div>
                                    <span
                                        >Personalized counseling and education
                                        sessions</span
                                    >
                                </li>
                                <li
                                    class="flex items-start gap-3 text-xl text-subtle/90"
                                >
                                    <div
                                        class="w-2 h-2 rounded-full bg-love mt-2.5"
                                    >
                                    </div>
                                    <span
                                        >Integration of mindfulness and yoga
                                        practices</span
                                    >
                                </li>
                                <li
                                    class="flex items-start gap-3 text-xl text-subtle/90"
                                >
                                    <div
                                        class="w-2 h-2 rounded-full bg-love mt-2.5"
                                    >
                                    </div>
                                    <span
                                        >Holistic therapies including
                                        acupuncture</span
                                    >
                                </li>
                                <li
                                    class="flex items-start gap-3 text-xl text-subtle/90"
                                >
                                    <div
                                        class="w-2 h-2 rounded-full bg-love mt-2.5"
                                    >
                                    </div>
                                    <span
                                        >Safe, judgment-free environment for
                                        healing</span
                                    >
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <!-- Consultations Section -->
        <section class="py-24 px-4 sm:px-6">
            <div class="max-w-container-lg mx-auto">
                <h2 class="text-5xl font-display text-text mb-12">
                    Consultations
                </h2>

                <div class="grid gap-8">
                    <div
                        class="bg-surface/30 rounded-3xl p-8 border border-highlight-med/10 backdrop-blur-xl"
                    >
                        <div class="flex items-start gap-6">
                            <div
                                class="bg-iris/10 w-16 h-16 rounded-2xl flex items-center justify-center"
                            >
                                <svg
                                    class="w-8 h-8 text-iris"
                                    viewBox="0 0 24 24"
                                    fill="none"
                                    stroke="currentColor"
                                    stroke-width="1.5"
                                >
                                    <path
                                        d="M15 10l4.553-2.276A1 1 0 0121 8.618v6.764a1 1 0 01-1.447.894L15 14M5 18h8a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v8a2 2 0 002 2z"
                                    ></path>
                                </svg>
                            </div>
                            <div>
                                <h3
                                    class="text-3xl font-display text-text mb-4"
                                >
                                    Online Consultations
                                </h3>
                                <p
                                    class="text-xl text-subtle/90 leading-relaxed"
                                >
                                    Convenient, private consultations from the
                                    comfort of your home. Available globally
                                    through secure video conferencing.
                                </p>
                            </div>
                        </div>
                    </div>

                    <div
                        class="bg-surface/30 rounded-3xl p-8 border border-highlight-med/10 backdrop-blur-xl"
                    >
                        <div class="flex items-start gap-6">
                            <div
                                class="bg-gold/10 w-16 h-16 rounded-2xl flex items-center justify-center"
                            >
                                <svg
                                    class="w-8 h-8 text-gold"
                                    viewBox="0 0 24 24"
                                    fill="none"
                                    stroke="currentColor"
                                    stroke-width="1.5"
                                >
                                    <path
                                        d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"
                                    ></path>
                                </svg>
                            </div>
                            <div>
                                <h3
                                    class="text-3xl font-display text-text mb-4"
                                >
                                    In-Person Consultations
                                </h3>
                                <p
                                    class="text-xl text-subtle/90 leading-relaxed"
                                >
                                    Direct consultations at our clinic in
                                    Thrissur, Kerala. Comprehensive care in a
                                    comfortable setting.
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <!-- CTA Section -->
        <section class="py-24 px-4 sm:px-6 bg-surface/30">
            <div class="max-w-container-lg mx-auto text-center">
                <h2 class="text-4xl md:text-5xl font-display text-text mb-8">
                    Ready to begin your journey to wellness?
                </h2>
                <GradientButton href="/contact" color="love" icon="calendar">
                    Schedule a Consultation
                </GradientButton>
            </div>
        </section>
    </main>
</Layout>
