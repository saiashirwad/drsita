---
import Layout from "../layouts/Layout.astro";
import Navbar from "../components/Navbar.astro";
import BackgroundShapes from "../components/BackgroundShapes.astro";
import Button from "../components/Button.astro";
---

<Layout title="Speaking - Dr. Sita">
    <Navbar />

    <main class="bg-base min-h-screen">
        <!-- Hero Section -->
        <section
            class="min-h-[60vh] relative flex items-center pt-32 pb-24 px-6"
        >
            <BackgroundShapes />
            <div class="max-w-6xl mx-auto w-full">
                <div class="max-w-4xl">
                    <h1
                        class="text-6xl md:text-7xl lg:text-8xl font-display text-text tracking-tight opacity-0 animate-fade-up mb-8"
                    >
                        Conference Speaking
                    </h1>
                    <p
                        class="text-3xl md:text-4xl text-subtle/90 font-light max-w-3xl opacity-0 animate-fade-up animation-delay-100 leading-relaxed"
                    >
                        Bringing expertise in sexual health and wellness to
                        global audiences through engaging talks and
                        presentations.
                    </p>
                </div>
            </div>
        </section>

        <!-- Featured Talks -->
        <section class="py-24 px-6 bg-surface/50">
            <div class="max-w-4xl mx-auto">
                <h2 class="text-4xl md:text-5xl font-display text-text mb-16">
                    Recent Speaking Engagements
                </h2>

                <div class="grid gap-8">
                    <div
                        class="bg-surface/30 rounded-[32px] p-12 border border-highlight-med/10 backdrop-blur-xl hover:border-highlight-med/20 transition-all duration-300"
                    >
                        <div
                            class="bg-foam/10 w-16 h-16 rounded-2xl flex items-center justify-center mb-8"
                        >
                            <svg
                                class="w-8 h-8 text-foam"
                                viewBox="0 0 24 24"
                                fill="none"
                                stroke="currentColor"
                                stroke-width="1.5"
                            >
                                <path
                                    d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z"
                                ></path>
                            </svg>
                        </div>
                        <h3 class="text-3xl font-display text-foam mb-4">
                            International Women's Health Summit 2023
                        </h3>
                        <p class="text-xl text-subtle/90 leading-relaxed">
                            Keynote speaker on "Breaking Barriers in Sexual
                            Health Education"
                        </p>
                    </div>

                    <div
                        class="bg-surface/30 rounded-[32px] p-12 border border-highlight-med/10 backdrop-blur-xl hover:border-highlight-med/20 transition-all duration-300"
                    >
                        <div
                            class="bg-love/10 w-16 h-16 rounded-2xl flex items-center justify-center mb-8"
                        >
                            <svg
                                class="w-8 h-8 text-love"
                                viewBox="0 0 24 24"
                                fill="none"
                                stroke="currentColor"
                                stroke-width="1.5"
                            >
                                <path
                                    d="M15 10l4.553-2.276A1 1 0 0121 8.618v6.764a1 1 0 01-1.447.894L15 14M5 18h8a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v8a2 2 0 002 2z"
                                ></path>
                            </svg>
                        </div>
                        <h3 class="text-3xl font-display text-love mb-4">
                            TEDx Kerala 2023
                        </h3>
                        <p class="text-xl text-subtle/90 leading-relaxed">
                            "Revolutionizing Health Education Through Digital
                            Media"
                        </p>
                    </div>

                    <div
                        class="bg-surface/30 rounded-[32px] p-12 border border-highlight-med/10 backdrop-blur-xl hover:border-highlight-med/20 transition-all duration-300"
                    >
                        <div
                            class="bg-iris/10 w-16 h-16 rounded-2xl flex items-center justify-center mb-8"
                        >
                            <svg
                                class="w-8 h-8 text-iris"
                                viewBox="0 0 24 24"
                                fill="none"
                                stroke="currentColor"
                                stroke-width="1.5"
                            >
                                <path
                                    d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"
                                ></path>
                            </svg>
                        </div>
                        <h3 class="text-3xl font-display text-iris mb-4">
                            Global Wellness Conference 2022
                        </h3>
                        <p class="text-xl text-subtle/90 leading-relaxed">
                            Panel discussion on "Holistic Approaches to Women's
                            Health"
                        </p>
                    </div>
                </div>
            </div>
        </section>

        <!-- Topics Section -->
        <section class="py-24 px-6">
            <div class="max-w-4xl mx-auto">
                <h2 class="text-4xl md:text-5xl font-display text-text mb-16">
                    Speaking Topics
                </h2>

                <div
                    class="bg-surface/30 rounded-[32px] p-12 border border-highlight-med/10 backdrop-blur-xl hover:border-highlight-med/20 transition-all duration-300"
                >
                    <div
                        class="bg-foam/10 w-16 h-16 rounded-2xl flex items-center justify-center mb-8"
                    >
                        <svg
                            class="w-8 h-8 text-foam"
                            viewBox="0 0 24 24"
                            fill="none"
                            stroke="currentColor"
                            stroke-width="1.5"
                        >
                            <path
                                d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-3 7h3m-3 4h3m-6-4h.01M9 16h.01"
                            ></path>
                        </svg>
                    </div>
                    <h2 class="text-3xl font-display text-foam mb-8">
                        Speaking Topics
                    </h2>
                    <div class="grid sm:grid-cols-2 gap-8">
                        {
                            [
                                "Sexual Health Education",
                                "Women's Wellness",
                                "Digital Health Communication",
                                "Holistic Healthcare",
                                "Breaking Health Taboos",
                                "Medical Content Creation",
                            ].map((item) => (
                                <div class="flex items-center gap-4 text-subtle/90">
                                    <div class="w-3 h-3 rounded-full bg-foam" />
                                    <span class="text-xl">{item}</span>
                                </div>
                            ))
                        }
                    </div>
                </div>
            </div>
        </section>

        <!-- CTA Section -->
        <section class="py-24 px-6">
            <div class="max-w-4xl mx-auto text-center">
                <h2 class="text-4xl md:text-5xl font-display text-text mb-8">
                    Interested in having Dr. Sita speak at your event?
                </h2>
                <Button href="/contact" color="love" icon="mdi:calendar">
                    Get in Touch
                </Button>
            </div>
        </section>
    </main>
</Layout>
