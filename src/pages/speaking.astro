---
import BaseLayout from "../layouts/BaseLayout.astro";
import Navbar from "../components/Navbar.astro";
import Hero from "../components/Hero.astro";
import Section from "../components/Section.astro";
import SectionHeader from "../components/SectionHeader.astro";
import Button from "../components/Button.astro";

const talks = [
  {
    event: "Doordarshan",
    topic: "Importance of Adolescent Sexual Education",
    when: "June 20 2024",
  },
  {
    event: "Josh Talks, Eranakulam",
    topic:
      "My journey from a gynecologist to a sexual health consultant and my message to people who are starting a new career at any point in their lives",
    when: "May 18 2024",
  },
  {
    event: "TOGSICON (organized by TOGS, Thrissur)",
    when: "July 2024",
    topic: "Cross Talk about Sex and Sexuality",
  },
  {
    event: "South Zone FOGSI Conference, Mahabalipuram",
    when: "",
    topic: "Holistic and Comprehensive management of Vaginismus",
  },
  {
    event: "International Sexual Health Practitioners Society, Delhi",
    when: "September 11, 2024",
    topic: "A Novel Approach to Managing Vaginismus on an In-Patient Basis",
  },

  {
    event: "CSEPI, Pune",
    when: "September 28, 2024",
    topic:
      "How to manage sexual dysfunction in couples by creating positive relationships",
  },
];
---

<BaseLayout title="Speaking - Dr. Sita">
  <Navbar />

  <main>
    <Hero
      title="Conference Speaking"
      subtitle="Bringing expertise in sexual health and wellness to global audiences through engaging talks and presentations."
    />

    <Section>
      <SectionHeader title="Recent Speaking Engagements" class="mb-16" />
      <div class="grid gap-16">
        {
          talks.map((talk) => (
            <div class="">
              <h3 class="text-3xl font-display text-foam mb-4">{talk.event}</h3>
              <p class="text-xl text-subtle/90 leading-relaxed">{talk.topic}</p>
              <p class="text-xl text-subtle/90 leading-relaxed">{talk.when}</p>
            </div>
          ))
        }
      </div>
    </Section>

    <!-- Topics Section -->
    <Section>
      <SectionHeader title="Speaking Topics" class="mb-16" />
      <div class="grid sm:grid-cols-2 gap-8">
        {
          [
            "Sexual Health Education",
            "Women's Wellness",
            "Digital Health Communication",
            "Holistic Healthcare",
            "Breaking Health Taboos",
            "Medical Content Creation",
          ].map((item) => (
            <div class="flex items-center gap-4 text-subtle/90">
              <div class="w-3 h-3 rounded-full bg-foam" />
              <span class="text-xl">{item}</span>
            </div>
          ))
        }
      </div>
    </Section>

    <!-- CTA Section -->
    <Section class="py-32">
      <div class="text-center">
        <h2 class="text-4xl md:text-5xl font-display text-text mb-8">
          Interested in having Dr. Sita speak at your event?
        </h2>
        <Button href="/contact" color="love" icon="mdi:calendar">
          Get in Touch
        </Button>
      </div>
    </Section>
  </main>
</BaseLayout>
