---
import Layout from "../layouts/Layout.astro";
import Navbar from "../components/Navbar.astro";
import BackgroundShapes from "../components/BackgroundShapes.astro";
import Button from "../components/Button.astro";
---

<Layout title="Academy - Dr. Sita">
    <Navbar />

    <main class="bg-base min-h-screen">
        <!-- Hero Section -->
        <section
            class="min-h-[60vh] relative flex items-center justify-center pt-32 pb-24 px-4 sm:px-6"
        >
            <BackgroundShapes />
            <div class="container mx-auto w-full">
                <div class="container mx-auto text-center">
                    <h1
                        class="text-6xl md:text-7xl lg:text-8xl font-display text-text tracking-tight opacity-0 animate-fade-up mb-8"
                    >
                        Dr. Sita's Academy
                    </h1>
                    <p
                        class="text-3xl md:text-4xl text-subtle/90 font-light opacity-0 animate-fade-up animation-delay-100 leading-relaxed"
                    >
                        Comprehensive courses for personal growth and
                        professional development.
                    </p>
                </div>
            </div>
        </section>

        <!-- Public Courses Section -->
        <section class="py-24 px-4 sm:px-6">
            <div class="container mx-auto">
                <!-- Pregnancy & Parenthood Category -->
                <div class="mb-16">
                    <h3 class="text-3xl font-display text-foam mb-8">
                        Pregnancy & Parenthood
                    </h3>
                    <div
                        class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8"
                    >
                        <!-- Trimester Guide Card -->
                        <div
                            class="bg-surface/30 rounded-[32px] overflow-hidden border border-highlight-med/10 backdrop-blur-xl hover:border-highlight-med/20 transition-all duration-300"
                        >
                            <div
                                class="aspect-video w-full bg-foam/10 relative"
                            >
                                <div
                                    class="absolute inset-0 flex items-center justify-center"
                                >
                                    <svg
                                        class="w-16 h-16 text-foam"
                                        viewBox="0 0 24 24"
                                        fill="none"
                                        stroke="currentColor"
                                        stroke-width="1.5"
                                    >
                                        <path
                                            d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9a9 9 0 01-9-9m9 9c1.657 0 3-4.03 3-9s-1.343-9-3-9m0 18c-1.657 0-3-4.03-3-9s1.343-9 3-9m-9 9a9 9 0 019-9"
                                        ></path>
                                    </svg>
                                </div>
                                <div class="absolute top-4 left-4 flex gap-2">
                                    <span
                                        class="px-3 py-1 rounded-full text-sm bg-foam/10 text-foam border border-foam/20"
                                    >
                                        Featured
                                    </span>
                                    <span
                                        class="px-3 py-1 rounded-full text-sm bg-love/10 text-love border border-love/20"
                                    >
                                        New
                                    </span>
                                </div>
                            </div>
                            <div class="p-8">
                                <h4
                                    class="text-2xl font-display text-foam mb-4"
                                >
                                    Trimester-wise Pregnancy Guide
                                </h4>
                                <p class="text-lg text-subtle/90 mb-6">
                                    Comprehensive guidance through each stage of
                                    pregnancy, from conception to delivery.
                                </p>
                                <a
                                    href="#"
                                    class="inline-flex items-center text-foam hover:text-foam/80 transition-colors"
                                >
                                    Learn more
                                    <svg
                                        class="w-5 h-5 ml-2"
                                        viewBox="0 0 20 20"
                                        fill="currentColor"
                                    >
                                        <path
                                            fill-rule="evenodd"
                                            d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z"
                                            clip-rule="evenodd"></path>
                                    </svg>
                                </a>
                            </div>
                        </div>

                        <!-- Pre-pregnancy Care Card -->
                        <div
                            class="bg-surface/30 rounded-[32px] overflow-hidden border border-highlight-med/10 backdrop-blur-xl hover:border-highlight-med/20 transition-all duration-300"
                        >
                            <div
                                class="aspect-video w-full bg-iris/10 relative"
                            >
                                <div
                                    class="absolute inset-0 flex items-center justify-center"
                                >
                                    <svg
                                        class="w-16 h-16 text-iris"
                                        viewBox="0 0 24 24"
                                        fill="none"
                                        stroke="currentColor"
                                        stroke-width="1.5"
                                    >
                                        <path
                                            d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"
                                        ></path>
                                    </svg>
                                </div>
                                <div class="absolute top-4 left-4">
                                    <span
                                        class="px-3 py-1 rounded-full text-sm bg-iris/10 text-iris border border-iris/20"
                                    >
                                        Essential
                                    </span>
                                </div>
                            </div>
                            <div class="p-8">
                                <h4
                                    class="text-2xl font-display text-iris mb-4"
                                >
                                    Pre-pregnancy Care
                                </h4>
                                <p class="text-lg text-subtle/90 mb-6">
                                    Essential preparation and guidance for
                                    couples planning to conceive.
                                </p>
                                <a
                                    href="#"
                                    class="inline-flex items-center text-iris hover:text-iris/80 transition-colors"
                                >
                                    Learn more
                                    <svg
                                        class="w-5 h-5 ml-2"
                                        viewBox="0 0 20 20"
                                        fill="currentColor"
                                    >
                                        <path
                                            fill-rule="evenodd"
                                            d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z"
                                            clip-rule="evenodd"></path>
                                    </svg>
                                </a>
                            </div>
                        </div>

                        <!-- Post-pregnancy Care Card -->
                        <div
                            class="bg-surface/30 rounded-[32px] overflow-hidden border border-highlight-med/10 backdrop-blur-xl hover:border-highlight-med/20 transition-all duration-300"
                        >
                            <div
                                class="aspect-video w-full bg-gold/10 relative"
                            >
                                <div
                                    class="absolute inset-0 flex items-center justify-center"
                                >
                                    <svg
                                        class="w-16 h-16 text-gold"
                                        viewBox="0 0 24 24"
                                        fill="none"
                                        stroke="currentColor"
                                        stroke-width="1.5"
                                    >
                                        <path
                                            d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"
                                        ></path>
                                    </svg>
                                </div>
                                <div class="absolute top-4 left-4">
                                    <span
                                        class="px-3 py-1 rounded-full text-sm bg-gold/10 text-gold border border-gold/20"
                                    >
                                        Popular
                                    </span>
                                </div>
                            </div>
                            <div class="p-8">
                                <h4
                                    class="text-2xl font-display text-gold mb-4"
                                >
                                    Post-pregnancy Care
                                </h4>
                                <p class="text-lg text-subtle/90 mb-6">
                                    Complete guide to postpartum recovery and
                                    newborn care.
                                </p>
                                <a
                                    href="#"
                                    class="inline-flex items-center text-gold hover:text-gold/80 transition-colors"
                                >
                                    Learn more
                                    <svg
                                        class="w-5 h-5 ml-2"
                                        viewBox="0 0 20 20"
                                        fill="currentColor"
                                    >
                                        <path
                                            fill-rule="evenodd"
                                            d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z"
                                            clip-rule="evenodd"></path>
                                    </svg>
                                </a>
                            </div>
                        </div>

                        <!-- Child Protection Card -->
                        <div
                            class="bg-surface/30 rounded-[32px] overflow-hidden border border-highlight-med/10 backdrop-blur-xl hover:border-highlight-med/20 transition-all duration-300"
                        >
                            <div
                                class="aspect-video w-full bg-love/10 relative"
                            >
                                <div
                                    class="absolute inset-0 flex items-center justify-center"
                                >
                                    <svg
                                        class="w-16 h-16 text-love"
                                        viewBox="0 0 24 24"
                                        fill="none"
                                        stroke="currentColor"
                                        stroke-width="1.5"
                                    >
                                        <path
                                            d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"
                                        ></path>
                                    </svg>
                                </div>
                                <div class="absolute top-4 left-4">
                                    <span
                                        class="px-3 py-1 rounded-full text-sm bg-love/10 text-love border border-love/20"
                                    >
                                        Important
                                    </span>
                                </div>
                            </div>
                            <div class="p-8">
                                <h4
                                    class="text-2xl font-display text-love mb-4"
                                >
                                    Child Protection and Safety
                                </h4>
                                <p class="text-lg text-subtle/90 mb-6">
                                    Essential knowledge for protecting children
                                    and ensuring their safety.
                                </p>
                                <a
                                    href="#"
                                    class="inline-flex items-center text-love hover:text-love/80 transition-colors"
                                >
                                    Learn more
                                    <svg
                                        class="w-5 h-5 ml-2"
                                        viewBox="0 0 20 20"
                                        fill="currentColor"
                                    >
                                        <path
                                            fill-rule="evenodd"
                                            d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z"
                                            clip-rule="evenodd"></path>
                                    </svg>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Wellness & Relationships Category -->
                <div class="mb-16">
                    <h3 class="text-3xl font-display text-love mb-8">
                        Wellness & Relationships
                    </h3>
                    <div
                        class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8"
                    >
                        <!-- Sexual Wellness Card -->
                        <div
                            class="bg-surface/30 rounded-[32px] overflow-hidden border border-highlight-med/10 backdrop-blur-xl hover:border-highlight-med/20 transition-all duration-300"
                        >
                            <div
                                class="aspect-video w-full bg-rose/10 relative"
                            >
                                <div
                                    class="absolute inset-0 flex items-center justify-center"
                                >
                                    <svg
                                        class="w-16 h-16 text-rose"
                                        viewBox="0 0 24 24"
                                        fill="none"
                                        stroke="currentColor"
                                        stroke-width="1.5"
                                    >
                                        <path
                                            d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"
                                        ></path>
                                    </svg>
                                </div>
                                <div class="absolute top-4 left-4 flex gap-2">
                                    <span
                                        class="px-3 py-1 rounded-full text-sm bg-rose/10 text-rose border border-rose/20"
                                    >
                                        Popular
                                    </span>
                                    <span
                                        class="px-3 py-1 rounded-full text-sm bg-foam/10 text-foam border border-foam/20"
                                    >
                                        Featured
                                    </span>
                                </div>
                            </div>
                            <div class="p-8">
                                <h4
                                    class="text-2xl font-display text-rose mb-4"
                                >
                                    Sexual Wellness and Relationship Enhancement
                                </h4>
                                <p class="text-lg text-subtle/90 mb-6">
                                    Comprehensive guide to improving intimacy
                                    and strengthening relationships.
                                </p>
                                <a
                                    href="#"
                                    class="inline-flex items-center text-rose hover:text-rose/80 transition-colors"
                                >
                                    Learn more
                                    <svg
                                        class="w-5 h-5 ml-2"
                                        viewBox="0 0 20 20"
                                        fill="currentColor"
                                    >
                                        <path
                                            fill-rule="evenodd"
                                            d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z"
                                            clip-rule="evenodd"></path>
                                    </svg>
                                </a>
                            </div>
                        </div>

                        <!-- Weight Management Card -->
                        <div
                            class="bg-surface/30 rounded-[32px] overflow-hidden border border-highlight-med/10 backdrop-blur-xl hover:border-highlight-med/20 transition-all duration-300"
                        >
                            <div
                                class="aspect-video w-full bg-pine/10 relative"
                            >
                                <div
                                    class="absolute inset-0 flex items-center justify-center"
                                >
                                    <svg
                                        class="w-16 h-16 text-pine"
                                        viewBox="0 0 24 24"
                                        fill="none"
                                        stroke="currentColor"
                                        stroke-width="1.5"
                                    >
                                        <path
                                            d="M3 6l3 1m0 0l-3 9a5.002 5.002 0 006.001 0M6 7l3 9M6 7l6-2m6 2l3-1m-3 1l-3 9a5.002 5.002 0 006.001 0M18 7l3 9m-3-9l-6-2m0-2v2m0 16V5m0 16H9m3 0h3"
                                        ></path>
                                    </svg>
                                </div>
                                <div class="absolute top-4 left-4">
                                    <span
                                        class="px-3 py-1 rounded-full text-sm bg-pine/10 text-pine border border-pine/20"
                                    >
                                        New
                                    </span>
                                </div>
                            </div>
                            <div class="p-8">
                                <h4
                                    class="text-2xl font-display text-pine mb-4"
                                >
                                    Weight Management
                                </h4>
                                <p class="text-lg text-subtle/90 mb-6">
                                    Holistic approach to healthy weight
                                    management and lifestyle changes.
                                </p>
                                <a
                                    href="#"
                                    class="inline-flex items-center text-pine hover:text-pine/80 transition-colors"
                                >
                                    Learn more
                                    <svg
                                        class="w-5 h-5 ml-2"
                                        viewBox="0 0 20 20"
                                        fill="currentColor"
                                    >
                                        <path
                                            fill-rule="evenodd"
                                            d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z"
                                            clip-rule="evenodd"></path>
                                    </svg>
                                </a>
                            </div>
                        </div>

                        <!-- Mindfulness Card -->
                        <div
                            class="bg-surface/30 rounded-[32px] overflow-hidden border border-highlight-med/10 backdrop-blur-xl hover:border-highlight-med/20 transition-all duration-300"
                        >
                            <div
                                class="aspect-video w-full bg-iris/10 relative"
                            >
                                <div
                                    class="absolute inset-0 flex items-center justify-center"
                                >
                                    <svg
                                        class="w-16 h-16 text-iris"
                                        viewBox="0 0 24 24"
                                        fill="none"
                                        stroke="currentColor"
                                        stroke-width="1.5"
                                    >
                                        <path
                                            d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"
                                        ></path>
                                    </svg>
                                </div>
                                <div class="absolute top-4 left-4">
                                    <span
                                        class="px-3 py-1 rounded-full text-sm bg-iris/10 text-iris border border-iris/20"
                                    >
                                        Essential
                                    </span>
                                </div>
                            </div>
                            <div class="p-8">
                                <h4
                                    class="text-2xl font-display text-iris mb-4"
                                >
                                    Mindfulness Practices
                                </h4>
                                <p class="text-lg text-subtle/90 mb-6">
                                    Learn techniques for stress reduction and
                                    emotional balance.
                                </p>
                                <a
                                    href="#"
                                    class="inline-flex items-center text-iris hover:text-iris/80 transition-colors"
                                >
                                    Learn more
                                    <svg
                                        class="w-5 h-5 ml-2"
                                        viewBox="0 0 20 20"
                                        fill="currentColor"
                                    >
                                        <path
                                            fill-rule="evenodd"
                                            d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z"
                                            clip-rule="evenodd"></path>
                                    </svg>
                                </a>
                            </div>
                        </div>

                        <!-- Mental Health Card -->
                        <div
                            class="bg-surface/30 rounded-[32px] overflow-hidden border border-highlight-med/10 backdrop-blur-xl hover:border-highlight-med/20 transition-all duration-300"
                        >
                            <div
                                class="aspect-video w-full bg-love/10 relative"
                            >
                                <div
                                    class="absolute inset-0 flex items-center justify-center"
                                >
                                    <svg
                                        class="w-16 h-16 text-love"
                                        viewBox="0 0 24 24"
                                        fill="none"
                                        stroke="currentColor"
                                        stroke-width="1.5"
                                    >
                                        <path
                                            d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"
                                        ></path>
                                    </svg>
                                </div>
                                <div class="absolute top-4 left-4">
                                    <span
                                        class="px-3 py-1 rounded-full text-sm bg-love/10 text-love border border-love/20"
                                    >
                                        Popular
                                    </span>
                                </div>
                            </div>
                            <div class="p-8">
                                <h4
                                    class="text-2xl font-display text-love mb-4"
                                >
                                    Mental Health Programs
                                </h4>
                                <p class="text-lg text-subtle/90 mb-6">
                                    Comprehensive support for emotional
                                    well-being and mental health.
                                </p>
                                <a
                                    href="#"
                                    class="inline-flex items-center text-love hover:text-love/80 transition-colors"
                                >
                                    Learn more
                                    <svg
                                        class="w-5 h-5 ml-2"
                                        viewBox="0 0 20 20"
                                        fill="currentColor"
                                    >
                                        <path
                                            fill-rule="evenodd"
                                            d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z"
                                            clip-rule="evenodd"></path>
                                    </svg>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <!-- CTA Section -->
        <section class="py-24 px-4 sm:px-6">
            <div class="container mx-auto">
                <div
                    class="bg-surface/30 rounded-[32px] p-12 border border-highlight-med/10 backdrop-blur-xl text-center"
                >
                    <h2
                        class="text-4xl md:text-5xl font-display text-text mb-8"
                    >
                        Ready to start learning?
                    </h2>
                    <p
                        class="text-xl text-subtle/90 leading-relaxed mb-8 max-w-2xl mx-auto"
                    >
                        Join our academy and gain access to comprehensive
                        courses designed to support your journey to wellness.
                    </p>
                    <Button href="/contact" color="love" icon="arrow">
                        Enroll Now
                    </Button>
                </div>
            </div>
        </section>
    </main>
</Layout>
