---
import BaseLayout from "../layouts/BaseLayout.astro";
import Navbar from "../components/Navbar.astro";
import Hero from "../components/Hero.astro";
import Section from "../components/Section.astro";
import SectionHeader from "../components/SectionHeader.astro";

const socialChannels = {
  youtube: [
    {
      title: "Dr. Sita's Mind Body Care (Malayalam)",
      description: "Health and wellness content in Malayalam",
      url: "#",
      icon: "mdi:youtube",
      color: "text-love",
      bgColor: "bg-love/10",
    },
    {
      title: "Dr. Sita's Mind Body Care - English",
      description: "Global content on health, intimacy, and mindfulness",
      url: "#",
      icon: "mdi:youtube",
      color: "text-love",
      bgColor: "bg-love/10",
    },
    {
      title: "Mind Body Positive with Dr. Sita",
      description: "Motivational and educational videos for holistic living",
      url: "#",
      icon: "mdi:youtube",
      color: "text-love",
      bgColor: "bg-love/10",
    },
  ],
  instagram: [
    {
      title: "Mind Body Positive with Dr. Sita",
      description: "Positive health messages and updates",
      url: "https://www.instagram.com/mindbodypositivewithdrsita",
      icon: "mdi:instagram",
      color: "text-iris",
      bgColor: "bg-iris/10",
    },
    {
      title: "Ask Dr. Sita",
      description: "Interactive Q&A platform",
      url: "https://www.instagram.com/askdrsita",
      icon: "mdi:instagram",
      color: "text-iris",
      bgColor: "bg-iris/10",
    },
  ],
  facebook: [
    {
      title: "Mind Body Positive with Dr. Sita",
      description: "Updates on videos, blogs, and upcoming events",
      url: "https://www.facebook.com/mindbodypositivewithdrsita",
      icon: "mdi:facebook",
      color: "text-foam",
      bgColor: "bg-foam/10",
    },
  ],
};
---

<BaseLayout title="Social Media | Dr. Sita">
  <Navbar />

  <main>
    <Hero title="Connect with Dr. Sita" subtitle="Join our community" />

    <!-- YouTube Section -->
    <Section>
      <SectionHeader title="YouTube Channels" />
      <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
        {
          socialChannels.youtube.map((channel) => (
            <a
              href={channel.url}
              class="bg-surface/30 rounded-[32px] p-12 border border-highlight-med/10 backdrop-blur-xl hover:border-highlight-med/20 transition-all duration-300"
            >
              <div
                class={`${channel.bgColor} w-16 h-16 rounded-2xl flex items-center justify-center mb-8`}
              >
                <svg
                  class={`w-8 h-8 ${channel.color}`}
                  viewBox="0 0 24 24"
                  fill="currentColor"
                >
                  <path d="M19.615 3.184c-3.604-.246-11.631-.245-15.23 0-3.897.266-4.356 2.62-4.385 8.816.029 6.185.484 8.549 4.385 8.816 3.6.245 11.626.246 15.23 0 3.897-.266 4.356-2.62 4.385-8.816-.029-6.185-.484-8.549-4.385-8.816zm-10.615 12.816v-8l8 3.993-8 4.007z" />
                </svg>
              </div>
              <h3 class="text-3xl font-display text-text mb-4">
                {channel.title}
              </h3>
              <p class="text-xl text-subtle/90 leading-relaxed">
                {channel.description}
              </p>
            </a>
          ))
        }
      </div>
    </Section>

    <!-- Instagram Section -->
    <Section>
      <SectionHeader title="Instagram Accounts" />
      <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
        {
          socialChannels.instagram.map((profile) => (
            <a
              href={profile.url}
              class="bg-surface/30 rounded-[32px] p-12 border border-highlight-med/10 backdrop-blur-xl hover:border-highlight-med/20 transition-all duration-300"
            >
              <div
                class={`${profile.bgColor} w-16 h-16 rounded-2xl flex items-center justify-center mb-8`}
              >
                <svg
                  class={`w-8 h-8 ${profile.color}`}
                  viewBox="0 0 24 24"
                  fill="currentColor"
                >
                  <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z" />
                </svg>
              </div>
              <h3 class="text-3xl font-display text-text mb-4">
                {profile.title}
              </h3>
              <p class="text-xl text-subtle/90 leading-relaxed">
                {profile.description}
              </p>
            </a>
          ))
        }
      </div>
    </Section>

    <!-- Facebook Section -->
    <Section>
      <SectionHeader title="Facebook Page" />
      <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
        {
          socialChannels.facebook.map((page) => (
            <a
              href={page.url}
              class="bg-surface/30 rounded-[32px] p-12 border border-highlight-med/10 backdrop-blur-xl hover:border-highlight-med/20 transition-all duration-300"
            >
              <div
                class={`${page.bgColor} w-16 h-16 rounded-2xl flex items-center justify-center mb-8`}
              >
                <svg
                  class={`w-8 h-8 ${page.color}`}
                  viewBox="0 0 24 24"
                  fill="currentColor"
                >
                  <path d="M9 8h-3v4h3v12h5v-12h3.642l.358-4h-4v-1.667c0-.955.192-1.333 1.115-1.333h2.885v-5h-3.808c-3.596 0-5.192 1.583-5.192 4.615v3.385z" />
                </svg>
              </div>
              <h3 class="text-3xl font-display text-text mb-4">{page.title}</h3>
              <p class="text-xl text-subtle/90 leading-relaxed">
                {page.description}
              </p>
            </a>
          ))
        }
      </div>
    </Section>
  </main>
</BaseLayout>
