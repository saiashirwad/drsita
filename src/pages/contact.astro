---
import BaseLayout from "../layouts/BaseLayout.astro";
import Navbar from "../components/Navbar.astro";
import Hero from "../components/Hero.astro";
import Section from "../components/Section.astro";
import Button from "../components/Button.astro";
---

<BaseLayout title="Contact - Dr. Sita">
  <Navbar />

  <main class="min-h-screen flex items-center justify-center">
    <div class="text-center">
      <h1
        class="text-6xl md:text-7xl font-display text-text tracking-tight opacity-0 animate-fade-up mb-8"
      >
        Get in Touch
      </h1>
      <p
        class="text-2xl text-subtle opacity-0 animate-fade-up animation-delay-100 leading-relaxed mb-12 max-w-xl mx-auto"
      >
        Schedule a consultation and take the first step towards better health
        and wellness
      </p>
      <div class="opacity-0 animate-fade-up animation-delay-200">
        <Button
          href="https://cal.com/dr-sita"
          external
          color="love"
          icon="mdi:calendar"
        >
          Schedule a Consultation
        </Button>
      </div>
    </div>
  </main>
</BaseLayout>
