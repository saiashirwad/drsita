---
import Layout from "../layouts/Layout.astro";
import Navbar from "../components/Navbar.astro";
---

<Layout title="Contact - Dr. Sita">
    <Navbar />

    <main class="min-h-screen pt-32 pb-24 px-6 bg-base">
        <div class="max-w-3xl mx-auto">
            <h1
                class="text-4xl md:text-5xl font-display text-text mb-8 tracking-tight text-center"
            >
                Contact Dr. Sita
            </h1>

            <div class="grid md:grid-cols-2 gap-8 mb-12">
                <!-- Contact Information -->
                <div class="bg-surface/50 rounded-2xl p-8 shadow-xl">
                    <h2 class="text-2xl font-display text-text mb-6">
                        Get in Touch
                    </h2>

                    <div class="space-y-4">
                        <div class="flex items-start space-x-3 text-subtle">
                            <svg
                                class="w-6 h-6 mt-1"
                                fill="currentColor"
                                viewBox="0 0 24 24"
                            >
                                <path
                                    d="M12 2C6.486 2 2 6.486 2 12s4.486 10 10 10 10-4.486 10-10S17.514 2 12 2zm0 18c-4.411 0-8-3.589-8-8s3.589-8 8-8 8 3.589 8 8-3.589 8-8 8z"
                                ></path>
                                <path d="M13 7h-2v6h6v-2h-4z"></path>
                            </svg>
                            <div>
                                <p class="font-medium mb-1">
                                    Consultation Hours
                                </p>
                                <p class="text-sm">
                                    Monday - Friday: 9:00 AM - 5:00 PM
                                </p>
                                <p class="text-sm">
                                    Saturday: 9:00 AM - 1:00 PM
                                </p>
                            </div>
                        </div>

                        <div class="flex items-start space-x-3 text-subtle">
                            <svg
                                class="w-6 h-6 mt-1"
                                fill="currentColor"
                                viewBox="0 0 24 24"
                            >
                                <path
                                    d="M12 2C8.13 2 5 5.13 5 9c0 5.25 7 13 7 13s7-7.75 7-13c0-3.87-3.13-7-7-7zm0 9.5c-1.38 0-2.5-1.12-2.5-2.5s1.12-2.5 2.5-2.5 2.5 1.12 2.5 2.5-1.12 2.5-2.5 2.5z"
                                ></path>
                            </svg>
                            <div>
                                <p class="font-medium mb-1">Location</p>
                                <p class="text-sm">Kerala, India</p>
                                <p class="text-sm">
                                    (Full address provided upon appointment)
                                </p>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Contact Form -->
                <form class="bg-surface/50 rounded-2xl p-8 shadow-xl space-y-6">
                    <div>
                        <label for="name" class="block text-subtle mb-2 text-sm"
                            >Name</label
                        >
                        <input
                            type="text"
                            id="name"
                            name="name"
                            class="w-full px-4 py-2 bg-overlay rounded-lg border border-highlight-low focus:border-pine focus:outline-none focus:ring-1 focus:ring-pine text-text"
                            required
                        />
                    </div>

                    <div>
                        <label
                            for="email"
                            class="block text-subtle mb-2 text-sm">Email</label
                        >
                        <input
                            type="email"
                            id="email"
                            name="email"
                            class="w-full px-4 py-2 bg-overlay rounded-lg border border-highlight-low focus:border-pine focus:outline-none focus:ring-1 focus:ring-pine text-text"
                            required
                        />
                    </div>

                    <div>
                        <label
                            for="message"
                            class="block text-subtle mb-2 text-sm"
                            >Message</label
                        >
                        <textarea
                            id="message"
                            name="message"
                            rows="4"
                            class="w-full px-4 py-2 bg-overlay rounded-lg border border-highlight-low focus:border-pine focus:outline-none focus:ring-1 focus:ring-pine text-text resize-none"
                            required></textarea>
                    </div>

                    <button
                        type="submit"
                        class="w-full px-6 py-3 bg-pine text-surface rounded-lg hover:bg-pine/90 transition-colors duration-300 font-medium"
                    >
                        Send Message
                    </button>
                </form>
            </div>

            <!-- Social Links -->
            <div class="text-center">
                <h2 class="text-2xl font-display text-text mb-6">
                    Connect Online
                </h2>
                <div class="flex justify-center gap-8">
                    <a
                        href="https://www.youtube.com/@DrSitasMindBodyCare"
                        class="text-subtle hover:text-pine transition-colors duration-300"
                        target="_blank"
                        rel="noopener noreferrer"
                    >
                        <span class="sr-only">YouTube</span>
                        <svg
                            class="w-8 h-8"
                            viewBox="0 0 24 24"
                            fill="currentColor"
                        >
                            <path
                                d="M23.498 6.186a3.016 3.016 0 0 0-2.122-2.136C19.505 3.545 12 3.545 12 3.545s-7.505 0-9.377.505A3.017 3.017 0 0 0 .502 6.186C0 8.07 0 12 0 12s0 3.93.502 5.814a3.016 3.016 0 0 0 2.122 2.136c1.871.505 9.376.505 9.376.505s7.505 0 9.377-.505a3.015 3.015 0 0 0 2.122-2.136C24 15.93 24 12 24 12s0-3.93-.502-5.814zM9.545 15.568V8.432L15.818 12l-6.273 3.568z"
                            ></path>
                        </svg>
                    </a>
                    <a
                        href="https://www.instagram.com/askdrsita"
                        class="text-subtle hover:text-pine transition-colors duration-300"
                        target="_blank"
                        rel="noopener noreferrer"
                    >
                        <span class="sr-only">Instagram</span>
                        <svg
                            class="w-8 h-8"
                            viewBox="0 0 24 24"
                            fill="currentColor"
                        >
                            <path
                                d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"
                            ></path>
                        </svg>
                    </a>
                </div>
            </div>
        </div>
    </main>
</Layout>

