---
import Layout from "../layouts/Layout.astro";
import Navbar from "../components/Navbar.astro";
import BackgroundShapes from "../components/BackgroundShapes.astro";
import GradientButton from "../components/GradientButton.astro";
---

<Layout title="Contact - Dr. Sita">
    <Navbar />

    <main
        class="min-h-screen bg-base flex items-center justify-center px-4 sm:px-6"
    >
        <BackgroundShapes />

        <div class="max-w-container-sm mx-auto text-center">
            <h1
                class="text-6xl md:text-7xl font-display text-text tracking-tight opacity-0 animate-fade-up mb-8"
            >
                Get in Touch
            </h1>
            <p
                class="text-2xl text-subtle/90 font-light opacity-0 animate-fade-up animation-delay-100 leading-relaxed mb-12"
            >
                Schedule a consultation and take the first step towards better
                health and wellness
            </p>
            <div class="opacity-0 animate-fade-up animation-delay-200">
                <GradientButton
                    href="https://cal.com/dr-sita"
                    external
                    color="love"
                    icon="calendar"
                >
                    Schedule a Consultation
                </GradientButton>
            </div>
        </div>
    </main>
</Layout>
