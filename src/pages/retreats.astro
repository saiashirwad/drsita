---
import Layout from "../layouts/Layout.astro";
import Navbar from "../components/Navbar.astro";
import BackgroundShapes from "../components/BackgroundShapes.astro";
import Button from "../components/Button.astro";
---

<Layout title="Retreats & Workshops - Dr. Sita">
    <Navbar />

    <main class="bg-base min-h-screen">
        <!-- Hero Section -->
        <section
            class="min-h-[60vh] relative flex items-center justify-center pt-32 pb-24 px-4 sm:px-6"
        >
            <BackgroundShapes />
            <div class="container mx-auto w-full">
                <div class="container mx-auto text-center">
                    <h1
                        class="text-6xl md:text-7xl lg:text-8xl font-display text-text tracking-tight opacity-0 animate-fade-up mb-8"
                    >
                        Retreats & Workshops
                    </h1>
                    <p
                        class="text-3xl md:text-4xl text-subtle/90 font-light opacity-0 animate-fade-up animation-delay-100 leading-relaxed"
                    >
                        Immersive experiences for deep healing and
                        transformation.
                    </p>
                </div>
            </div>
        </section>

        <!-- Featured Retreats -->
        <section class="py-24 px-4 sm:px-6 bg-surface/30">
            <div class="container mx-auto">
                <h2 class="text-5xl font-display text-text mb-16">
                    Featured Programs
                </h2>

                <div class="grid gap-12">
                    <!-- 10-Day Retreat -->
                    <div
                        class="bg-surface/30 rounded-[32px] p-12 border border-highlight-med/10 backdrop-blur-xl hover:border-highlight-med/20 transition-all duration-300"
                    >
                        <div
                            class="bg-love/10 w-16 h-16 rounded-2xl flex items-center justify-center mb-8"
                        >
                            <svg
                                class="w-8 h-8 text-love"
                                viewBox="0 0 24 24"
                                fill="none"
                                stroke="currentColor"
                                stroke-width="1.5"
                            >
                                <path
                                    d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"
                                ></path>
                            </svg>
                        </div>
                        <h3 class="text-3xl font-display text-love mb-4">
                            10-Day Retreat for Couples
                        </h3>
                        <p class="text-xl text-subtle/90 leading-relaxed mb-6">
                            Help couples rediscover intimacy and deepen their
                            relationships after years of shared life.
                        </p>
                        <div class="space-y-4">
                            <h4 class="text-xl text-foam">Key Focus Areas:</h4>
                            <ul class="grid gap-3 text-lg text-subtle/90">
                                <li class="flex items-start gap-3">
                                    <div
                                        class="w-2 h-2 rounded-full bg-foam mt-2"
                                    >
                                    </div>
                                    <span
                                        >Emotional reconnection through guided
                                        discussions</span
                                    >
                                </li>
                                <li class="flex items-start gap-3">
                                    <div
                                        class="w-2 h-2 rounded-full bg-foam mt-2"
                                    >
                                    </div>
                                    <span
                                        >Physical intimacy and sexual wellness
                                        with sensate therapy</span
                                    >
                                </li>
                                <li class="flex items-start gap-3">
                                    <div
                                        class="w-2 h-2 rounded-full bg-foam mt-2"
                                    >
                                    </div>
                                    <span
                                        >Navigating physical health issues</span
                                    >
                                </li>
                                <li class="flex items-start gap-3">
                                    <div
                                        class="w-2 h-2 rounded-full bg-foam mt-2"
                                    >
                                    </div>
                                    <span
                                        >Overcoming communication barriers</span
                                    >
                                </li>
                            </ul>
                        </div>
                        <a
                            href="/contact"
                            class="inline-flex items-center text-love hover:text-love/80 mt-6 transition-colors"
                        >
                            Register now
                            <svg
                                class="w-5 h-5 ml-2"
                                viewBox="0 0 20 20"
                                fill="currentColor"
                            >
                                <path
                                    fill-rule="evenodd"
                                    d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z"
                                    clip-rule="evenodd"></path>
                            </svg>
                        </a>
                    </div>

                    <!-- 2-3 Week Retreat -->
                    <div
                        class="bg-surface/30 rounded-[32px] p-12 border border-highlight-med/10 backdrop-blur-xl hover:border-highlight-med/20 transition-all duration-300"
                    >
                        <div
                            class="bg-iris/10 w-16 h-16 rounded-2xl flex items-center justify-center mb-8"
                        >
                            <svg
                                class="w-8 h-8 text-iris"
                                viewBox="0 0 24 24"
                                fill="none"
                                stroke="currentColor"
                                stroke-width="1.5"
                            >
                                <path
                                    d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"
                                ></path>
                            </svg>
                        </div>
                        <h3 class="text-3xl font-display text-iris mb-4">
                            2-3 Week Intensive Program
                        </h3>
                        <p class="text-xl text-subtle/90 leading-relaxed mb-6">
                            Comprehensive program for couples dealing with
                            psychosexual challenges.
                        </p>
                        <div class="space-y-4">
                            <h4 class="text-xl text-foam">What to Expect:</h4>
                            <ul class="grid gap-3 text-lg text-subtle/90">
                                <li class="flex items-start gap-3">
                                    <div
                                        class="w-2 h-2 rounded-full bg-foam mt-2"
                                    >
                                    </div>
                                    <span
                                        >Comprehensive sessions on sexual
                                        education and communication</span
                                    >
                                </li>
                                <li class="flex items-start gap-3">
                                    <div
                                        class="w-2 h-2 rounded-full bg-foam mt-2"
                                    >
                                    </div>
                                    <span
                                        >One-on-one counseling and group therapy</span
                                    >
                                </li>
                                <li class="flex items-start gap-3">
                                    <div
                                        class="w-2 h-2 rounded-full bg-foam mt-2"
                                    >
                                    </div>
                                    <span
                                        >Holistic therapies including
                                        acupuncture and yoga</span
                                    >
                                </li>
                            </ul>
                        </div>
                        <a
                            href="/contact"
                            class="inline-flex items-center text-iris hover:text-iris/80 mt-6 transition-colors"
                        >
                            Learn more
                            <svg
                                class="w-5 h-5 ml-2"
                                viewBox="0 0 20 20"
                                fill="currentColor"
                            >
                                <path
                                    fill-rule="evenodd"
                                    d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z"
                                    clip-rule="evenodd"></path>
                            </svg>
                        </a>
                    </div>

                    <!-- 1-Day Program -->
                    <div
                        class="bg-surface/30 rounded-[32px] p-12 border border-highlight-med/10 backdrop-blur-xl hover:border-highlight-med/20 transition-all duration-300"
                    >
                        <div
                            class="bg-gold/10 w-16 h-16 rounded-2xl flex items-center justify-center mb-8"
                        >
                            <svg
                                class="w-8 h-8 text-gold"
                                viewBox="0 0 24 24"
                                fill="none"
                                stroke="currentColor"
                                stroke-width="1.5"
                            >
                                <path
                                    d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"
                                ></path>
                            </svg>
                        </div>
                        <h3 class="text-3xl font-display text-gold mb-4">
                            1-Day Awareness Program
                        </h3>
                        <p class="text-xl text-subtle/90 leading-relaxed mb-6">
                            A concise yet impactful introduction to Batch
                            Therapy and other in-depth programs.
                        </p>
                        <div class="space-y-4">
                            <h4 class="text-xl text-foam">Activities:</h4>
                            <ul class="grid gap-3 text-lg text-subtle/90">
                                <li class="flex items-start gap-3">
                                    <div
                                        class="w-2 h-2 rounded-full bg-foam mt-2"
                                    >
                                    </div>
                                    <span
                                        >Short workshops on sexual health and
                                        mindfulness</span
                                    >
                                </li>
                                <li class="flex items-start gap-3">
                                    <div
                                        class="w-2 h-2 rounded-full bg-foam mt-2"
                                    >
                                    </div>
                                    <span
                                        >Open Q&A sessions to address common
                                        doubts</span
                                    >
                                </li>
                            </ul>
                        </div>
                        <a
                            href="/contact"
                            class="inline-flex items-center text-gold hover:text-gold/80 mt-6 transition-colors"
                        >
                            Register now
                            <svg
                                class="w-5 h-5 ml-2"
                                viewBox="0 0 20 20"
                                fill="currentColor"
                            >
                                <path
                                    fill-rule="evenodd"
                                    d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z"
                                    clip-rule="evenodd"></path>
                            </svg>
                        </a>
                    </div>
                </div>
            </div>
        </section>

        <!-- Locations Section -->
        <section class="py-24 px-6">
            <div class="max-w-4xl mx-auto">
                <h2 class="text-5xl font-display text-text mb-12">
                    Program Locations
                </h2>

                <div class="grid gap-8">
                    <div
                        class="bg-surface/30 rounded-[32px] p-12 border border-highlight-med/10 backdrop-blur-xl hover:border-highlight-med/20 transition-all duration-300"
                    >
                        <div
                            class="bg-foam/10 w-16 h-16 rounded-2xl flex items-center justify-center mb-8"
                        >
                            <svg
                                class="w-8 h-8 text-foam"
                                viewBox="0 0 24 24"
                                fill="none"
                                stroke="currentColor"
                                stroke-width="1.5"
                            >
                                <path
                                    d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"
                                ></path>
                            </svg>
                        </div>
                        <h3 class="text-3xl font-display text-foam mb-6">
                            India
                        </h3>
                        <div class="grid sm:grid-cols-2 gap-6">
                            <div class="space-y-3">
                                <h4 class="text-xl text-text">Major Cities</h4>
                                <ul class="space-y-2 text-lg text-subtle/90">
                                    <li>Delhi</li>
                                    <li>Mumbai</li>
                                    <li>Bengaluru</li>
                                    <li>Hyderabad</li>
                                </ul>
                            </div>
                            <div class="space-y-3">
                                <h4 class="text-xl text-text">
                                    Serene Locations
                                </h4>
                                <ul class="space-y-2 text-lg text-subtle/90">
                                    <li>Hill Stations</li>
                                    <li>Wellness Resorts</li>
                                    <li>Retreat Centers</li>
                                </ul>
                            </div>
                        </div>
                    </div>

                    <div
                        class="bg-surface/30 rounded-[32px] p-12 border border-highlight-med/10 backdrop-blur-xl hover:border-highlight-med/20 transition-all duration-300"
                    >
                        <div
                            class="bg-iris/10 w-16 h-16 rounded-2xl flex items-center justify-center mb-8"
                        >
                            <svg
                                class="w-8 h-8 text-iris"
                                viewBox="0 0 24 24"
                                fill="none"
                                stroke="currentColor"
                                stroke-width="1.5"
                            >
                                <path
                                    d="M3.055 11H5a2 2 0 012 2v1a2 2 0 002 2 2 2 0 012 2v2.945M8 3.935V5.5A2.5 2.5 0 0010.5 8h.5a2 2 0 012 2 2 2 0 104 0 2 2 0 012-2h1.064M15 20.488V18a2 2 0 012-2h3.064M21 12a9 9 0 11-18 0 9 9 0 0118 0z"
                                ></path>
                            </svg>
                        </div>
                        <h3 class="text-3xl font-display text-iris mb-6">
                            International
                        </h3>
                        <div class="grid sm:grid-cols-2 gap-6">
                            <div class="space-y-3">
                                <h4 class="text-xl text-text">Regions</h4>
                                <ul class="space-y-2 text-lg text-subtle/90">
                                    <li>Middle East</li>
                                    <li>Europe</li>
                                    <li>North America</li>
                                </ul>
                            </div>
                            <div class="space-y-3">
                                <h4 class="text-xl text-text">
                                    Virtual Programs
                                </h4>
                                <ul class="space-y-2 text-lg text-subtle/90">
                                    <li>Online Retreats</li>
                                    <li>Digital Workshops</li>
                                    <li>Remote Consultations</li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <!-- Virtual Programs -->
        <section class="py-24 px-6 bg-surface/30">
            <div class="max-w-4xl mx-auto">
                <div class="text-center space-y-8">
                    <h2 class="text-4xl md:text-5xl font-display text-text">
                        Virtual Programs Available
                    </h2>
                    <p class="text-2xl text-subtle/90">
                        Can't attend in person? Join our virtual programs from
                        anywhere in the world.
                    </p>
                    <div class="pt-8">
                        <Button href="/contact" color="foam" icon="calendar">
                            Enquire Now
                        </Button>
                    </div>
                </div>
            </div>
        </section>
    </main>
</Layout>
