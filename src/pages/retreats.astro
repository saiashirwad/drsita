---
import BaseLayout from "../layouts/BaseLayout.astro";
import Navbar from "../components/Navbar.astro";
import Hero from "../components/Hero.astro";
import Section from "../components/Section.astro";
import SectionHeader from "../components/SectionHeader.astro";
import Button from "../components/Button.astro";
---

<BaseLayout title="Retreats & Workshops - Dr. Sita">
  <Navbar />

  <main>
    <Hero
      title="Retreats & Workshops"
      subtitle="Immersive experiences for deep healing and transformation."
    />

    <!-- 10-Day Retreat -->
    <Section>
      <SectionHeader title="10-Day Retreat for Couples" />
      <p class="text-xl text-subtle/90 leading-relaxed mb-8">
        Help couples rediscover intimacy and deepen their relationships after
        years of shared life.
      </p>
      <div class="space-y-8">
        <div>
          <h3 class="text-2xl font-display text-foam mb-4">Key Focus Areas:</h3>
          <ul class="grid gap-3 text-lg text-subtle/90">
            <li class="flex items-start gap-3">
              <div class="w-2 h-2 rounded-full bg-foam mt-2"></div>
              <span>Emotional reconnection through guided discussions</span>
            </li>
            <li class="flex items-start gap-3">
              <div class="w-2 h-2 rounded-full bg-foam mt-2"></div>
              <span
                >Physical intimacy and sexual wellness with sensate therapy</span
              >
            </li>
            <li class="flex items-start gap-3">
              <div class="w-2 h-2 rounded-full bg-foam mt-2"></div>
              <span>Navigating physical health issues</span>
            </li>
            <li class="flex items-start gap-3">
              <div class="w-2 h-2 rounded-full bg-foam mt-2"></div>
              <span>Overcoming communication barriers</span>
            </li>
          </ul>
        </div>
        <div>
          <Button href="/contact" color="love" icon="mdi:calendar">
            Register now
          </Button>
        </div>
      </div>
    </Section>

    <!-- 2-3 Week Program -->
    <Section>
      <SectionHeader title="2-3 Week Intensive Program" />
      <p class="text-xl text-subtle/90 leading-relaxed mb-8">
        Comprehensive program for couples dealing with psychosexual challenges.
      </p>
      <div class="space-y-8">
        <div>
          <h3 class="text-2xl font-display text-iris mb-4">What to Expect:</h3>
          <ul class="grid gap-3 text-lg text-subtle/90">
            <li class="flex items-start gap-3">
              <div class="w-2 h-2 rounded-full bg-iris mt-2"></div>
              <span
                >Comprehensive sessions on sexual education and communication</span
              >
            </li>
            <li class="flex items-start gap-3">
              <div class="w-2 h-2 rounded-full bg-iris mt-2"></div>
              <span>One-on-one counseling and group therapy</span>
            </li>
            <li class="flex items-start gap-3">
              <div class="w-2 h-2 rounded-full bg-iris mt-2"></div>
              <span>Holistic therapies including acupuncture and yoga</span>
            </li>
          </ul>
        </div>
        <div>
          <Button href="/contact" color="iris" icon="mdi:calendar">
            Learn more
          </Button>
        </div>
      </div>
    </Section>

    <!-- 1-Day Program -->
    <Section>
      <SectionHeader title="1-Day Awareness Program" />
      <p class="text-xl text-subtle/90 leading-relaxed mb-8">
        A concise yet impactful introduction to Batch Therapy and other in-depth
        programs.
      </p>
      <div class="space-y-8">
        <div>
          <h3 class="text-2xl font-display text-gold mb-4">Activities:</h3>
          <ul class="grid gap-3 text-lg text-subtle/90">
            <li class="flex items-start gap-3">
              <div class="w-2 h-2 rounded-full bg-gold mt-2"></div>
              <span>Short workshops on sexual health and mindfulness</span>
            </li>
            <li class="flex items-start gap-3">
              <div class="w-2 h-2 rounded-full bg-gold mt-2"></div>
              <span>Open Q&A sessions to address common doubts</span>
            </li>
          </ul>
        </div>
        <div>
          <Button href="/contact" color="gold" icon="mdi:calendar">
            Register now
          </Button>
        </div>
      </div>
    </Section>

    <!-- Program Locations -->
    <Section>
      <SectionHeader title="Program Locations" />
      <div class="grid sm:grid-cols-2 gap-12">
        <div>
          <h3 class="text-2xl font-display text-foam mb-6">India</h3>
          <div class="grid gap-6">
            <div class="space-y-3">
              <h4 class="text-xl text-text">Major Cities</h4>
              <ul class="space-y-2 text-lg text-subtle/90">
                <li>Delhi</li>
                <li>Mumbai</li>
                <li>Bengaluru</li>
                <li>Hyderabad</li>
              </ul>
            </div>
            <div class="space-y-3">
              <h4 class="text-xl text-text">Serene Locations</h4>
              <ul class="space-y-2 text-lg text-subtle/90">
                <li>Hill Stations</li>
                <li>Wellness Resorts</li>
                <li>Retreat Centers</li>
              </ul>
            </div>
          </div>
        </div>

        <div>
          <h3 class="text-2xl font-display text-iris mb-6">International</h3>
          <div class="grid gap-6">
            <div class="space-y-3">
              <h4 class="text-xl text-text">Regions</h4>
              <ul class="space-y-2 text-lg text-subtle/90">
                <li>Middle East</li>
                <li>Europe</li>
                <li>North America</li>
              </ul>
            </div>
            <div class="space-y-3">
              <h4 class="text-xl text-text">Virtual Programs</h4>
              <ul class="space-y-2 text-lg text-subtle/90">
                <li>Online Retreats</li>
                <li>Digital Workshops</li>
                <li>Remote Consultations</li>
              </ul>
            </div>
          </div>
        </div>
      </div>
    </Section>

    <!-- Virtual Programs -->
    <Section class="py-32">
      <div class="text-center space-y-8">
        <h2 class="text-4xl md:text-5xl font-display text-text">
          Virtual Programs Available
        </h2>
        <p class="text-2xl text-subtle/90">
          Can't attend in person? Join our virtual programs from anywhere in the
          world.
        </p>
        <div class="pt-8">
          <Button href="/contact" color="foam" icon="mdi:calendar">
            Enquire Now
          </Button>
        </div>
      </div>
    </Section>
  </main>
</BaseLayout>
