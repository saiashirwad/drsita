---
import Layout from "../layouts/Layout.astro";
import Navbar from "../components/Navbar.astro";
import BackgroundShapes from "../components/BackgroundShapes.astro";
import GradientButton from "../components/GradientButton.astro";
---

<Layout title="Retreats & Workshops - Dr. Sita">
    <Navbar />

    <main class="bg-base min-h-screen">
        <!-- Hero Section -->
        <section
            class="min-h-[60vh] relative flex items-center justify-center pt-32 pb-24 px-4 sm:px-6"
        >
            <BackgroundShapes />
            <div class="max-w-container-xl mx-auto w-full">
                <div class="max-w-container-md mx-auto text-center">
                    <h1
                        class="text-6xl md:text-7xl lg:text-8xl font-display text-text tracking-tight opacity-0 animate-fade-up mb-8"
                    >
                        Retreats & Workshops
                    </h1>
                    <p
                        class="text-3xl md:text-4xl text-subtle/90 font-light opacity-0 animate-fade-up animation-delay-100 leading-relaxed"
                    >
                        Immersive experiences for deep healing and
                        transformation.
                    </p>
                </div>
            </div>
        </section>

        <!-- Featured Retreats -->
        <section class="py-24 px-4 sm:px-6 bg-surface/30">
            <div class="max-w-container-lg mx-auto">
                <h2 class="text-5xl font-display text-text mb-16">
                    Featured Programs
                </h2>

                <div class="grid gap-12">
                    <!-- 10-Day Retreat -->
                    <div
                        class="bg-surface/30 rounded-3xl p-8 border border-highlight-med/10 backdrop-blur-xl"
                    >
                        <div class="space-y-6">
                            <div class="flex items-center gap-4">
                                <div class="w-3 h-3 rounded-full bg-love"></div>
                                <h3 class="text-3xl font-display text-love">
                                    10-Day Retreat for Couples
                                </h3>
                            </div>
                            <p
                                class="text-2xl text-subtle/90 leading-relaxed pl-7"
                            >
                                Help couples rediscover intimacy and deepen
                                their relationships after years of shared life.
                            </p>
                            <div class="pl-7 space-y-4">
                                <h4 class="text-xl text-foam">
                                    Key Focus Areas:
                                </h4>
                                <ul class="grid gap-3 text-lg text-subtle/90">
                                    <li class="flex items-start gap-3">
                                        <div
                                            class="w-2 h-2 rounded-full bg-foam mt-2"
                                        >
                                        </div>
                                        <span
                                            >Emotional reconnection through
                                            guided discussions</span
                                        >
                                    </li>
                                    <li class="flex items-start gap-3">
                                        <div
                                            class="w-2 h-2 rounded-full bg-foam mt-2"
                                        >
                                        </div>
                                        <span
                                            >Physical intimacy and sexual
                                            wellness with sensate therapy</span
                                        >
                                    </li>
                                    <li class="flex items-start gap-3">
                                        <div
                                            class="w-2 h-2 rounded-full bg-foam mt-2"
                                        >
                                        </div>
                                        <span
                                            >Navigating physical health issues</span
                                        >
                                    </li>
                                    <li class="flex items-start gap-3">
                                        <div
                                            class="w-2 h-2 rounded-full bg-foam mt-2"
                                        >
                                        </div>
                                        <span
                                            >Overcoming communication barriers</span
                                        >
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>

                    <!-- 2-3 Week Retreat -->
                    <div
                        class="bg-surface/30 rounded-3xl p-8 border border-highlight-med/10 backdrop-blur-xl"
                    >
                        <div class="space-y-6">
                            <div class="flex items-center gap-4">
                                <div class="w-3 h-3 rounded-full bg-iris"></div>
                                <h3 class="text-3xl font-display text-iris">
                                    2-3 Week Intensive Program
                                </h3>
                            </div>
                            <p
                                class="text-2xl text-subtle/90 leading-relaxed pl-7"
                            >
                                Comprehensive program for couples dealing with
                                psychosexual challenges.
                            </p>
                            <div class="pl-7 space-y-4">
                                <h4 class="text-xl text-foam">
                                    What to Expect:
                                </h4>
                                <ul class="grid gap-3 text-lg text-subtle/90">
                                    <li class="flex items-start gap-3">
                                        <div
                                            class="w-2 h-2 rounded-full bg-foam mt-2"
                                        >
                                        </div>
                                        <span
                                            >Comprehensive sessions on sexual
                                            education and communication</span
                                        >
                                    </li>
                                    <li class="flex items-start gap-3">
                                        <div
                                            class="w-2 h-2 rounded-full bg-foam mt-2"
                                        >
                                        </div>
                                        <span
                                            >One-on-one counseling and group
                                            therapy</span
                                        >
                                    </li>
                                    <li class="flex items-start gap-3">
                                        <div
                                            class="w-2 h-2 rounded-full bg-foam mt-2"
                                        >
                                        </div>
                                        <span
                                            >Holistic therapies including
                                            acupuncture and yoga</span
                                        >
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>

                    <!-- 1-Day Program -->
                    <div
                        class="bg-surface/30 rounded-3xl p-8 border border-highlight-med/10 backdrop-blur-xl"
                    >
                        <div class="space-y-6">
                            <div class="flex items-center gap-4">
                                <div class="w-3 h-3 rounded-full bg-gold"></div>
                                <h3 class="text-3xl font-display text-gold">
                                    1-Day Awareness Program
                                </h3>
                            </div>
                            <p
                                class="text-2xl text-subtle/90 leading-relaxed pl-7"
                            >
                                A concise yet impactful introduction to Batch
                                Therapy and other in-depth programs.
                            </p>
                            <div class="pl-7 space-y-4">
                                <h4 class="text-xl text-foam">Activities:</h4>
                                <ul class="grid gap-3 text-lg text-subtle/90">
                                    <li class="flex items-start gap-3">
                                        <div
                                            class="w-2 h-2 rounded-full bg-foam mt-2"
                                        >
                                        </div>
                                        <span
                                            >Short workshops on sexual health
                                            and mindfulness</span
                                        >
                                    </li>
                                    <li class="flex items-start gap-3">
                                        <div
                                            class="w-2 h-2 rounded-full bg-foam mt-2"
                                        >
                                        </div>
                                        <span
                                            >Open Q&A sessions to address common
                                            doubts</span
                                        >
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <!-- Locations Section -->
        <section class="py-24 px-6">
            <div class="max-w-4xl mx-auto">
                <h2 class="text-5xl font-display text-text mb-12">
                    Program Locations
                </h2>

                <div class="grid gap-8">
                    <div
                        class="bg-surface/30 rounded-3xl p-8 border border-highlight-med/10 backdrop-blur-xl"
                    >
                        <h3 class="text-3xl font-display text-foam mb-6">
                            India
                        </h3>
                        <div class="grid sm:grid-cols-2 gap-6">
                            <div class="space-y-3">
                                <h4 class="text-xl text-text">Major Cities</h4>
                                <ul class="space-y-2 text-lg text-subtle/90">
                                    <li>Delhi</li>
                                    <li>Mumbai</li>
                                    <li>Bengaluru</li>
                                    <li>Hyderabad</li>
                                </ul>
                            </div>
                            <div class="space-y-3">
                                <h4 class="text-xl text-text">
                                    Serene Locations
                                </h4>
                                <ul class="space-y-2 text-lg text-subtle/90">
                                    <li>Hill Stations</li>
                                    <li>Wellness Resorts</li>
                                    <li>Retreat Centers</li>
                                </ul>
                            </div>
                        </div>
                    </div>

                    <div
                        class="bg-surface/30 rounded-3xl p-8 border border-highlight-med/10 backdrop-blur-xl"
                    >
                        <h3 class="text-3xl font-display text-iris mb-6">
                            International
                        </h3>
                        <div class="grid sm:grid-cols-3 gap-6">
                            <div class="space-y-3">
                                <h4 class="text-xl text-text">Middle East</h4>
                                <p class="text-lg text-subtle/90">
                                    Coming Soon
                                </p>
                            </div>
                            <div class="space-y-3">
                                <h4 class="text-xl text-text">Europe</h4>
                                <p class="text-lg text-subtle/90">
                                    Coming Soon
                                </p>
                            </div>
                            <div class="space-y-3">
                                <h4 class="text-xl text-text">North America</h4>
                                <p class="text-lg text-subtle/90">
                                    Coming Soon
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <!-- Virtual Programs -->
        <section class="py-24 px-6 bg-surface/30">
            <div class="max-w-4xl mx-auto">
                <div class="text-center space-y-8">
                    <h2 class="text-4xl md:text-5xl font-display text-text">
                        Virtual Programs Available
                    </h2>
                    <p class="text-2xl text-subtle/90">
                        Can't attend in person? Join our virtual programs from
                        anywhere in the world.
                    </p>
                    <div class="pt-8">
                        <GradientButton
                            href="/contact"
                            color="foam"
                            icon="calendar"
                        >
                            Enquire Now
                        </GradientButton>
                    </div>
                </div>
            </div>
        </section>
    </main>
</Layout>
