---
import Layout from "../layouts/Layout.astro";
import Navbar from "../components/Navbar.astro";
import BackgroundShapes from "../components/BackgroundShapes.astro";
import Button from "../components/Button.astro";
---

<Layout title="SiRa Products - Dr. Sita">
  <Navbar />

  <main class="bg-base min-h-screen">
    <!-- Hero Section -->
    <section
      class="min-h-[60vh] relative flex items-center justify-center pt-32 pb-24 px-4 sm:px-6"
    >
      <BackgroundShapes />
      <div class="container mx-auto w-full">
        <div class="container mx-auto text-center">
          <h1
            class="text-6xl md:text-7xl lg:text-8xl font-display text-text tracking-tight opacity-0 animate-fade-up mb-8"
          >
            SiRa
          </h1>
          <p
            class="text-3xl md:text-4xl text-subtle/90 font-light opacity-0 animate-fade-up animation-delay-100 leading-relaxed"
          >
            Curated wellness products to support your health journey.
          </p>
        </div>
      </div>
    </section>

    <!-- Coming Soon Section -->
    <section class="py-24 px-6 bg-surface/30">
      <div class="max-w-4xl mx-auto">
        <div class="text-center space-y-8">
          <h2 class="text-5xl font-display text-text">Coming Soon</h2>
          <p class="text-2xl text-subtle/90 max-w-2xl mx-auto">
            We're crafting a thoughtfully curated collection of health products
            and supplements designed to enhance your wellness journey.
          </p>
        </div>

        <div class="grid gap-12 mt-24">
          <div
            class="bg-surface/30 rounded-[32px] p-12 border border-highlight-med/10 backdrop-blur-xl hover:border-highlight-med/20 transition-all duration-300"
          >
            <div
              class="bg-foam/10 w-16 h-16 rounded-2xl flex items-center justify-center mb-8"
            >
              <svg
                class="w-8 h-8 text-foam"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="1.5"
              >
                <path d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z"></path>
              </svg>
            </div>
            <h3 class="text-3xl font-display text-foam mb-6">
              Product Categories
            </h3>
            <div class="grid sm:grid-cols-2 gap-8">
              <div class="space-y-4">
                <div class="flex items-center gap-3">
                  <div class="w-2 h-2 rounded-full bg-foam"></div>
                  <span class="text-xl text-subtle/90"
                    >Nutraceuticals & Supplements</span
                  >
                </div>
                <div class="flex items-center gap-3">
                  <div class="w-2 h-2 rounded-full bg-foam"></div>
                  <span class="text-xl text-subtle/90">Skin & Body Care</span>
                </div>
                <div class="flex items-center gap-3">
                  <div class="w-2 h-2 rounded-full bg-foam"></div>
                  <span class="text-xl text-subtle/90"
                    >Maternity Essentials</span
                  >
                </div>
                <div class="flex items-center gap-3">
                  <div class="w-2 h-2 rounded-full bg-foam"></div>
                  <span class="text-xl text-subtle/90">Holistic Tools</span>
                </div>
              </div>
              <div class="space-y-4">
                <div class="flex items-center gap-3">
                  <div class="w-2 h-2 rounded-full bg-foam"></div>
                  <span class="text-xl text-subtle/90"
                    >Sexual Wellness Essentials</span
                  >
                </div>
                <div class="flex items-center gap-3">
                  <div class="w-2 h-2 rounded-full bg-foam"></div>
                  <span class="text-xl text-subtle/90">Health Foods</span>
                </div>
                <div class="flex items-center gap-3">
                  <div class="w-2 h-2 rounded-full bg-foam"></div>
                  <span class="text-xl text-subtle/90">Wellness Gadgets</span>
                </div>
                <div class="flex items-center gap-3">
                  <div class="w-2 h-2 rounded-full bg-foam"></div>
                  <span class="text-xl text-subtle/90">Books & Resources</span>
                </div>
              </div>
            </div>
          </div>

          <div
            class="bg-surface/30 rounded-[32px] p-12 border border-highlight-med/10 backdrop-blur-xl hover:border-highlight-med/20 transition-all duration-300"
          >
            <div
              class="bg-love/10 w-16 h-16 rounded-2xl flex items-center justify-center mb-8"
            >
              <svg
                class="w-8 h-8 text-love"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="1.5"
              >
                <path
                  d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"
                ></path>
              </svg>
            </div>
            <h3 class="text-3xl font-display text-love mb-6">Our Promise</h3>
            <div class="grid sm:grid-cols-2 gap-8">
              <div class="space-y-4">
                <div class="flex items-start gap-3">
                  <div class="w-2 h-2 rounded-full bg-love mt-2"></div>
                  <span class="text-xl text-subtle/90"
                    >Carefully selected ingredients</span
                  >
                </div>
                <div class="flex items-start gap-3">
                  <div class="w-2 h-2 rounded-full bg-love mt-2"></div>
                  <span class="text-xl text-subtle/90"
                    >Evidence-based formulations</span
                  >
                </div>
              </div>
              <div class="space-y-4">
                <div class="flex items-start gap-3">
                  <div class="w-2 h-2 rounded-full bg-love mt-2"></div>
                  <span class="text-xl text-subtle/90"
                    >Quality assured manufacturing</span
                  >
                </div>
                <div class="flex items-start gap-3">
                  <div class="w-2 h-2 rounded-full bg-love mt-2"></div>
                  <span class="text-xl text-subtle/90"
                    >Expert recommended solutions</span
                  >
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Newsletter Section -->
    <section class="py-24 px-4 sm:px-6">
      <div class="container mx-auto text-center">
        <h2 class="text-4xl md:text-5xl font-display text-text mb-8">
          Stay Updated
        </h2>
        <p class="text-2xl text-subtle/90 mb-12">
          Be the first to know when our products launch. Sign up for exclusive
          updates and early access.
        </p>
        <Button href="/contact" color="gold" icon="mdi:mail">
          Join Waitlist
        </Button>
      </div>
    </section>
  </main>
</Layout>
