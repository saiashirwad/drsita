---
import Button from "../components/Button.astro";
import Hero from "../components/Hero.astro";
import Navbar from "../components/Navbar.astro";
import Section from "../components/Section.astro";
import SectionHeader from "../components/SectionHeader.astro";
import BaseLayout from "../layouts/BaseLayout.astro";
import type { Colors } from "../utils/colors";

type Hero = {
  title: string;
  subtitle: string;
  cta: {
    text: string;
    href: string;
    color: Colors;
    icon: string;
  };
};
const hero: Hero = {
  title: "Welcome to Dr. Sita's Mind Body Care",
  subtitle: "Transforming Lives Through Holistic Health and Wellness",
  cta: {
    text: "Begin Your Journey",
    href: "#story",
    color: "pine",
    icon: "mdi:arrow-right",
  },
};

const story = {
  title: "Empowering Holistic Wellness",
  paragraphs: [
    "As a globally respected Gynecologist, Sexual Health Consultant, Hypnotherapist, Educator and Wellness Coach, I invite you to explore my comprehensive platform. With over 25 years of expertise, I integrate evidence-based medical practices with holistic approaches such as mindfulness, yoga, and acupuncture to empower individuals and couples to achieve balanced physical, emotional, and mental health.",
    "I'm the creator of Dr Sita's Sangama Therapy, a groundbreaking therapy for sexual dysfunctions and intimacy challenges. Through my YouTube channels, I reach over 1.3M+ subscribers, sharing knowledge and insights about holistic health and wellness. As a visionary educator, I offer specialized courses for both the public and professionals.",
    "My journey in medicine began with obtaining my MD and DGO in Obstetrics & Gynecology in 1997, followed by specialized training in Psychosexual Medicine and Clinical Hypnotherapy. I've been featured as a public speaker on platforms such as Doordarshan and Josh Talks, spreading awareness about sexual health and holistic wellness.",
  ],
};

const values = {
  title: "Here are the values I live by",
  items: [
    {
      title: "Empowerment through Education",
      description:
        "Knowledge is the key to better health decisions. I believe in making medical knowledge accessible and understandable to everyone.",
      color: "foam",
    },
    {
      title: "Holistic Wellness",
      description:
        "True health encompasses both body and mind. I approach healthcare with a comprehensive perspective that considers all aspects of wellbeing.",
      color: "love",
    },
    {
      title: "Breaking Taboos",
      description:
        "Open discussions about sexual health are essential for a healthier society. I work to create safe spaces for these important conversations.",
      color: "iris",
    },
  ],
};

const expertise = {
  title: "Areas of Expertise",
  areas: [
    "Sexual Health Consultation",
    "Gynecological Care",
    "Women's Wellness",
    "Holistic Health Education",
    "Preventive Healthcare",
    "Wellness Coaching",
    "PCOS Management",
    "Psychotherapy",
  ],
};

const professional = {
  title: "Professional Background",
  qualifications: [
    {
      title: "Education & Specializations",
      items: [
        "MD and DGO in Obstetrics & Gynecology (1997)",
        "Fellowship in Psychosexual Medicine",
        "Clinical Hypnotherapist",
        "Expert in integrative wellness",
      ],
    },
    {
      title: "Professional Affiliations",
      items: [
        "Thrissur Obstetrics & Gynecological Society (TOGS)",
        "International Association of Sexual Medicine Practitioners (IASMP)",
        "European Society of Sexual Medicine (ESSM)",
        "PCOS Society of India",
      ],
    },
  ],
};

type Cta = {
  title: string;
  subtitle: string;
  button: {
    text: string;
    href: string;
    color: Colors;
    icon: string;
  };
};
const cta: Cta = {
  title: "Begin your journey toward holistic health",
  subtitle:
    "Explore our services, join our retreats, or shop from our curated store today.",
  button: {
    text: "Explore Services",
    href: "/services",
    color: "love",
    icon: "mdi:arrow-right",
  },
};
---

<BaseLayout title="About | Dr. Sita">
  <Navbar />
  <main>
    <Hero title={hero.title} subtitle={hero.subtitle} actions={[hero.cta]} />

    <!-- Story Section -->
    <Section>
      <SectionHeader title={story.title} />
      <div class="prose prose-xl prose-invert">
        {
          story.paragraphs.map((paragraph) => (
            <p class="text-2xl text-subtle/90 leading-relaxed mb-8">
              {paragraph}
            </p>
          ))
        }
      </div>
    </Section>

    <!-- Values Section -->
    <Section>
      <SectionHeader title={values.title} class="mb-16" />
      <div class="grid gap-16">
        {
          values.items.map((value) => (
            <div class="space-y-6">
              <h3 class={`text-2xl font-display`}>{value.title}</h3>
              <p class="text-2xl text-subtle/90 leading-relaxed">
                {value.description}
              </p>
            </div>
          ))
        }
      </div>
    </Section>

    <!-- Professional Background -->
    <Section>
      <SectionHeader title={professional.title} class="mb-16" />
      <div class="grid gap-16">
        {
          professional.qualifications.map((qualification) => (
            <div class="space-y-8">
              <h3 class="text-2xl font-display text-text">
                {qualification.title}
              </h3>
              <ul class="space-y-4">
                {qualification.items.map((item) => (
                  <li class="flex items-center gap-4 text-subtle/90">
                    <div class="w-2 h-2 rounded-full bg-rose" />
                    <span class="text-xl">{item}</span>
                  </li>
                ))}
              </ul>
            </div>
          ))
        }
      </div>
    </Section>

    <!-- Areas of Expertise -->
    <Section>
      <SectionHeader title={expertise.title} class="mb-16" />
      <div class="grid sm:grid-cols-2 gap-8">
        {
          expertise.areas.map((item) => (
            <div class="flex items-center gap-4 text-subtle/90">
              <div class="w-3 h-3 rounded-full bg-foam" />
              <span class="text-2xl">{item}</span>
            </div>
          ))
        }
      </div>
    </Section>

    <!-- CTA Section -->
    <Section class="py-32">
      <div class="text-center space-y-12">
        <h2 class="text-5xl md:text-6xl font-display text-text">
          {cta.title}
        </h2>
        <p class="text-2xl text-subtle/90 leading-relaxed">
          {cta.subtitle}
        </p>
        <div class="pt-4">
          <Button
            href={cta.button.href}
            color={cta.button.color}
            icon={cta.button.icon}
          >
            {cta.button.text}
          </Button>
        </div>
      </div>
    </Section>
  </main>
</BaseLayout>
